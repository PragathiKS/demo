<header class="tp_header tp_header-pw">
    <div class="row">

        <div class="col-8 col-md-7 col-lg-2 d-flex align-items-center">
            {{# mobileMenu }}
            <span class="tp_header-mobileMenuIcon d-inline d-lg-none">
                <a href="#">{{> atoms-icon }}</a>
            </span>
            {{/ mobileMenu }}

            {{> atoms-logo-white }}
        </div>

        <div class="col-lg-7 d-none d-lg-flex align-items-center">
            {{> molecules-tp_navigation }}
        </div>

        <div class="col-4 col-md-5 col-lg-3 d-flex align-items-center text-right">
            {{# search }}
            <div class="tp_header-search">
                <a href="{{url}}">
                    {{> atoms-icon }}
                </a>
            </div>
            {{/ search }}

            {{# mylogin }}
            <div class="tp_header-myLogin">
                <a href="{{url}}">
                    {{> atoms-icon }} <span class="d-none d-md-inline">{{myloginName}}</span>
                </a>
            </div>
            {{/ mylogin }}

            {{# language }}
            <div class="tp_header-language">
                <a href="{{url}}">
                    {{> atoms-icon }} <span class="d-none d-md-inline">{{languageName}}</span>
                </a>
            </div>
            {{/ language }}
        </div>

    </div>
</header><!-- end c-header -->
