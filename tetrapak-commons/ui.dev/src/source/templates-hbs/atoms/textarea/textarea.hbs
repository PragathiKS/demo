<div class="tpatom-textarea-box{{#if wrapClasses}} {{wrapClasses}}{{/if}}">
    {{#if labelText}}
        <label class="tpatom-textarea-box__text{{#if labelClasses}} {{labelClasses}}{{/if}}" for="{{name}}">{{i18n key=labelText}}</label>
    {{/if}}

    <textarea name="{{name}}" id="{{name}}" class="tpatom-textarea-box__input{{#if eleClasses}} {{eleClasses}}{{/if}}"
        {{#if dataLocator}}
          data-locator="{{dataLocator}}"
        {{/if}}
        {{#if autoLocator}}
          auto_locator="{{autoLocator}}"
        {{/if}}
        {{#if maxlength}}
          maxlength="{{maxlength}}"
        {{/if}}
        {{#if readonly}}
          readonly="readonly"
        {{/if}}
        {{#if defaultValue}}
          value="{{i18n key=defaultValue}}"
        {{/if}}
        {{#if label}}
          aria-label="{{i18n key=label}}"
        {{/if}}
        {{#if placeholder}}
          placeholder="{{i18n key=placeholder}}"
        {{/if}}
        {{#eachData this}}
            {{@key}}="{{this}}"
        {{/eachData}}>
    </textarea>
</div>
