<div class="tpatom-checkbox{{#if baseClass}} {{baseClass}}{{/if}}{{#if jsClass}} {{jsClass}}{{/if}}">
    <label class="tpatom-checkbox__label clearfix" for="tpatomCheck{{uniqueKey}}">
        <input
            type="checkbox"
            class="tpatom-checkbox__input float-left{{#if jsMyEquipmentFilter}} {{jsMyEquipmentFilter}}{{/if}}{{#if isCountry}} country-equipment-list{{/if}}"
            id="tpatomCheck{{uniqueKey}}"
            value="{{value}}"
            {{#if isChecked}}
                checked="checked"
            {{/if}}
            {{#if disabled}}
                disabled
            {{/if}}
            {{#if autoLocatorCheckbox}}
                auto_locator={{autoLocatorCheckbox}}
            {{/if}}
            {{#eachData this}}
                {{@key}}="{{this}}"
            {{/eachData}} />
        <i class="tpatom-checkbox__icon icon icon-Tick float-left"></i>
        {{#if text}}
            <span class="tpatom-checkbox__text{{#if hideText}} sr-only{{/if}} js-checkbox__text" {{#if autoLocatorCheckboxText}}auto_locator={{autoLocatorCheckboxText}}{{/if}}>{{i18n key=text}}</span>
        {{/if}}
    </label>
</div>
