<div class="tpatom-dropdown {{#if className}} {{className}}{{/if}}">
 {{#if labelText}}<label class="tpatom-dropdown__text" for="{{name}}">{{i18n key=labelText}}</label>{{/if}}
    <div class="dropdown js-custom-dropdown">
        <button class="btn dropdown-toggle dropdown-btn  text-left js-dropdown-btn{{#if jsClass}} {{jsClass}}{{/if}}" type="button" id="{{name}}" data-key="{{#if defaultKey}}{{defaultKey}}{{else}}{{options.[0].key}}{{/if}}" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false">
            {{#if defaultValue}}
               <span>{{i18n key=defaultValue}}</span>
            {{else}}
                <span>{{options.[0].desc}}</span>
            {{/if}}
        </button>
        <i class="tpatom-dropdown__icon icon-Chevron_Down"></i>
        <ul class="dropdown-menu" aria-labelledby="{{name}}" role="menu">
            {{#each options}}
                <li role="presentation"> <a href="#" role="menuitem" class="dropdown-item js-custom-dropdown-li {{#if ../liClassName}} {{../liClassName}}{{/if}}" data-key="{{this.key}}">{{this.desc}}</a></li>
            {{/each}}
        </ul>
    </div>
</div>
