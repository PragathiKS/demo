{{> molecules/calendar/calendarModal this}}
{{#if isError}}
    <div class="js-order-search__filters d-none">
        {{#if dataErrorI18n}}
            {{> atoms/error/error error=true message=dataErrorI18n}}
        {{else}}
            {{> atoms/error/error error=true message="cuhu.error.message"}}
        {{/if}}
    </div>
{{else}}
    <form class="tp-order-search__filters js-order-search__filters js-prevent-default d-none">
        <div class="tp-order-search__date-range-wrapper float-lg-left">
            {{> atoms/input/input iconClass="icon-Calendar2" defaultValue=this.dateRange name="daterange" label=this.dateRangeLabelI18n eleClasses="js-order-search__date-range" dataLocator="calendar-picker" readonly=true }}
        </div>
        <div class="tp-order-search__status-wrapper float-lg-left">
            {{> atoms/dropdown/dropdown defaultValue=this.allStatusesTextI18n options=this.summary.status name="orderstatus" label=this.orderStatusLabelI18n eleClasses="tp-order-search__order-status js-order-search__order-status" dataLocator="status-drpdwn" }}
        </div>
        <div class="tp-order-search__address-wrapper">
            {{> atoms/dropdown/dropdown defaultValue=this.allAddressesTextI18n options=this.summary.deliveryAddress name="deliveryaddress" label=this.deliveryAddressLabelI18n eleClasses="tp-order-search__delivery-address js-order-search__delivery-address" dataLocator="address-drpdwn" }}
        </div>
        <div class="tp-order-search__flex-container">
            {{> atoms/input/input name="search" label=this.searchInputLabelI18n wrapClasses="tp-order-search__search-term" eleClasses="js-order-search__search-term" dataLocator="search-input" placeholder=this.searchTermPlaceholderI18n }}
            {{> atoms/buttons/button/button
                text=this.resetButtonTextI18n
                modifier="secondary"
                className="js-order-search__reset"
                data-locator="search-reset-btn"
            }}
            {{> atoms/buttons/button/button
                text=this.searchButtonTextI18n
                modifier="primary"
                className="js-order-search__submit"
                data-locator="search-order-btn"
                iconClass="icon-Chevron_Right"
            }}
        </div>
    </form>
{{/if}}
