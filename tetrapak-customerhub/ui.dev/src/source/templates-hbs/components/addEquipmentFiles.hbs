{{#each this}}
    <div class="tp-add-equipment__drag-and-drop-file-container">
        {{this}}
        <div class="tp-add-equipment__drag-and-drop-file-info-container">
            <i class="icon-PDF tp-add-equipment__drag-and-drop-file-icon tp-add-equipment__drag-and-drop-file-icon--file"></i>
            <p class="tp-add-equipment__drag-and-drop-file-name">{{name}} ({{@key}})</p>
        </div>
        <div class="tp-add-equipment__drag-and-drop-file-remove-container js-tp-add-equipment__drag-and-drop-file-remove-container" data-index="{{@key}}">
            <i class="icon-My_Euipment_Bin_X tp-add-equipment__drag-and-drop-file-icon tp-add-equipment__drag-and-drop-file-icon--trash"></i>
            <p class="tp-add-equipment__drag-and-drop-file-remove">Remove file</p>
        </div>
    </div>
{{/each}}