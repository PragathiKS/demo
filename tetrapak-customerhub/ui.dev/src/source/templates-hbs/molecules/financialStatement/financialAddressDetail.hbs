<p class="tp-financial-statement__account">{{i18n key=accountNumber}}: {{selectedCustomerData.info.accountNo}}</p>
<p class="tp-financial-statement__address-title">{{selectedCustomerData.customerName}}</p>
<div class="tp-financial-statement__address-detail">
    {{#if selectedCustomerData.info.name1}}
        <p>{{selectedCustomerData.info.name1}}</p>
    {{/if}}
    {{#if selectedCustomerData.info.name2}}
        <p>{{selectedCustomerData.info.name2}}</p>
    {{/if}}
    <p>{{#if selectedCustomerData.info.city}}{{selectedCustomerData.info.city}}, {{/if}}{{#if selectedCustomerData.info.state}}{{selectedCustomerData.info.state}}, {{selectedCustomerData.info.postalcode}} {{/if}}{{#if selectedCustomerData.info.country}}{{selectedCustomerData.info.country}}{{/if}}</p>
</div>
