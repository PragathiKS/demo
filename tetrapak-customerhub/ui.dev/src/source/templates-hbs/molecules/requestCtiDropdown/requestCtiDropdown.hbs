<div class="tpatom-dropdown {{#if wrapClasses}} {{wrapClasses}}{{/if}}">
    <div class="d-block position-relative">
        <select name="{{name}}" id="{{name}}" class="tpatom-dropdown__select-box">
            {{#if defaultValue}}
                <option value="">{{i18n key=defaultValue}}</option>
            {{/if}}
            {{#each options}}
                <option 
                {{#if this.selected}}
                    selected="selected"
                {{/if}}
                value="{{#if_noteq langDesc ""}}{{langDesc}}{{/if_noteq}}{{#if_eq langDesc ""}}{{langCode}}{{/if_eq}}">
                    {{#if_noteq langDesc ""}}{{langDesc}}{{/if_noteq}}
                    {{#if_eq langDesc ""}}{{langCode}}{{/if_eq}}
              </option>
            {{/each}}
        </select>
        <i class="tpatom-dropdown__icon icon-Arrow_Down"></i>
    </div>
</div>