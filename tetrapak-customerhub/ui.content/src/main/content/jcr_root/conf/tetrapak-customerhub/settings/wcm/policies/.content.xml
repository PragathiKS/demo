<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:rep="internal"
    jcr:mixinTypes="[rep:AccessControllable]"
    jcr:primaryType="cq:Page">
    <rep:policy/>
    <wcm jcr:primaryType="nt:unstructured">
        <foundation jcr:primaryType="nt:unstructured">
            <components jcr:primaryType="nt:unstructured">
                <responsivegrid jcr:primaryType="nt:unstructured">
                    <content-default
                        jcr:description="Policy for editable layout containers"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="customerhub Default"
                        sling:resourceType="wcm/core/components/policy/policy"
                        components="[group:tetrapak-customerhub,/apps/customerhub/components/form/container]"
                        policyResourceType="wcm/foundation/components/responsivegrid">
                        <cq:authoring jcr:primaryType="nt:unstructured">
                            <assetToComponentMapping jcr:primaryType="nt:unstructured">
                                <image
                                    jcr:primaryType="nt:unstructured"
                                    assetGroup="media"
                                    assetMimetype="image/*"
                                    droptarget="image"
                                    resourceType="customerhub/components/content/image"
                                    type="Images"/>
                            </assetToComponentMapping>
                        </cq:authoring>
                        <jcr:content
                            jcr:primaryType="nt:unstructured"
                            mergeList="{Boolean}true"/>
                    </content-default>
					<header-policy
                        jcr:description="To include only header and navigation"                        
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Header Policy"
                        sling:resourceType="wcm/core/components/policy/policy"
                        components="/apps/customerhub/components/structure/header,/apps/customerhub/components/structure/navigation">
                        <jcr:content jcr:primaryType="nt:unstructured"/>
                    </header-policy>
					<root-policy
                        jcr:description="Policy for editing templates"                        
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Template policy"
                        sling:resourceType="wcm/core/components/policy/policy"
                        components="[/libs/wcm/foundation/components/responsivegrid,group:tetrapak-customerhub,/apps/customerhub/components/form/container]"
                        policyResourceType="wcm/foundation/components/responsivegrid">
                        <cq:authoring jcr:primaryType="nt:unstructured">
                            <assetToComponentMapping jcr:primaryType="nt:unstructured">
                                <image
                                    jcr:primaryType="nt:unstructured"
                                    assetGroup="media"
                                    assetMimetype="image/*"
                                    droptarget="image"
                                    resourceType="customerhub/components/content/image"
                                    type="Images"/>
                            </assetToComponentMapping>
                        </cq:authoring>
                        <jcr:content
                            jcr:primaryType="nt:unstructured"
                            mergeList="{Boolean}true"/>
                    </root-policy>
                    <notification-policy                        
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Notification Policy"
                        sling:resourceType="wcm/core/components/policy/policy"
                        components="/apps/customerhub/components/content/notification">
                        <jcr:content jcr:primaryType="nt:unstructured"/>
                    </notification-policy>
                </responsivegrid>
            </components>
        </foundation>
    </wcm>
    <customerhub jcr:primaryType="nt:unstructured">
        <components jcr:primaryType="nt:unstructured">
            <form jcr:primaryType="nt:unstructured">
                <container jcr:primaryType="nt:unstructured">
                    <form-container
                        jcr:primaryType="nt:unstructured"
                        jcr:title="customerhub Form"
                        sling:resourceType="wcm/core/components/policy/policy"
                        components="[/apps/customerhub/components/form/button,/apps/customerhub/components/form/hidden,/apps/customerhub/components/form/options,/apps/customerhub/components/form/text]">
                        <jcr:content jcr:primaryType="nt:unstructured"/>
                    </form-container>
                </container>
            </form>
        </components>
    </customerhub>
</jcr:root>
