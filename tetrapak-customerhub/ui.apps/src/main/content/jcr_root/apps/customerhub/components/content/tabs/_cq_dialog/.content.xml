<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Tabs Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="tabs"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <imagepath
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                            fieldDescription="Select Image Path"
                            fieldLabel="Image Path"
                            name="./imagePath"
                            rootPath="/content/dam/customerhub"/>
                    <imageAltText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldDescription="Enter alt text for the image I18n key"
                            fieldLabel="Image alt text I18n key"
                            name="./imageAltText"/>
                    <tabsList
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Tabs List"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldLabel="List of tabs"
                        validation="multifield-max-5">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./tabsList">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <pageUrl
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="Select Page URL"
                                            fieldLabel="Page URL"
                                            name="./pageUrl"
                                            rootPath="/content/tetrapak/customerhub"/>
                                        <label
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Enter label I18n key"
                                            fieldLabel="Label I18n key"
                                            name="./labelI18n"/>
                                        <iconClass
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                emptyText="Select"
                                                fieldLabel="Icon Class"
                                                name="./iconClass"
                                                translateOptions="{Boolean}true">
                                            <items jcr:primaryType="nt:unstructured">
                                                <None jcr:primaryType="nt:unstructured"
                                                      text="None"
                                                      value=""/>
                                                <Dashboard jcr:primaryType="nt:unstructured"
                                                           text="Documents"
                                                           value="icon-document"/>
                                                <TetraPak jcr:primaryType="nt:unstructured"
                                                          text="Maintenance"
                                                          value="icon-maintenance"/>
                                            </items>
                                        </iconClass>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </tabsList>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
