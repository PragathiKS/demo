<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="List Content Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="list-content"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <headingI18n
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldDescription="Enter Heading"
                            fieldLabel="Heading"
                            name="./headingI18n"/>
                    <tablist
                        jcr:primaryType="nt:unstructured"
                        jcr:title="tablist"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldLabel="List of tabs"
                        validation="multifield-max-7">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./tablist">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
										<type
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/select"
											emptyText="Select Content Type"
											fieldLabel="Select Content Type"
											fieldDescription="Select the type (image/video) of content for the tab from the dropdown"
											name="./type"
											translateOptions="{Boolean}true">
											<items jcr:primaryType="nt:unstructured">
												<normal jcr:primaryType="nt:unstructured"
													text="Image"
													value="image"/>
												<rich jcr:primaryType="nt:unstructured"
													text="Video"
													value="video"/>
											</items>
										</type>
										<tabTitleI18n
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Enter title for the Tab"
                                            fieldLabel="Tab Title"
                                            name="./tabTitleI18n"/>
										<mediaTitleI18n
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Enter title for the Content"
                                            fieldLabel="Content Title"
                                            name="./mediaTitleI18n"/>                                       
                                        <mediaDescriptionI18n
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                            fieldDescription="Enter the detailed description for the tab"
                                            fieldLabel="Content Description"
                                            useFixedInlineToolbar="{Boolean}true"
                                            name="./mediaDescriptionI18n">
                                            <rtePlugins jcr:primaryType="nt:unstructured">
                                                <format
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                <justify
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                <lists
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                <paraformat
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                <links
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                <image
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                <findreplace
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                <subsuperscript
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                <spellcheck
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                <misctools
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*">
                                                    <specialCharsConfig jcr:primaryType="nt:unstructured">
                                                        <chars jcr:primaryType="nt:unstructured">
                                                            <copyright
                                                                    jcr:primaryType="nt:unstructured"
                                                                    entity="&amp;#169;"/>
                                                            <trademark
                                                                    jcr:primaryType="nt:unstructured"
                                                                    entity="&amp;#8482;"/>
                                                            <registered
                                                                    jcr:primaryType="nt:unstructured"
                                                                    entity="&amp;#174;"/>
                                                            <emDash
                                                                    jcr:primaryType="nt:unstructured"
                                                                    entity="&amp;#8212;"/>
                                                            <pound
                                                                    jcr:primaryType="nt:unstructured"
                                                                    entity="&amp;#163;"/>
                                                            <nbsp
                                                                    jcr:primaryType="nt:unstructured"
                                                                    entity="&amp;#160;"/>
                                                        </chars>
                                                    </specialCharsConfig>
                                                </misctools>
                                                <styles
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*">
                                                    <styles jcr:primaryType="nt:unstructured">
                                                        <plainSpan
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="defaultSpan"
                                                                text="Default (add span tag)"/>
                                                        <lead
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="lead"
                                                                text="Lead"/>
                                                    </styles>
                                                </styles>
                                                <table
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                            </rtePlugins>
                                            <uiSettings jcr:primaryType="nt:unstructured">
                                                <cui jcr:primaryType="nt:unstructured">
                                                    <inline
                                                            jcr:primaryType="nt:unstructured"
                                                            toolbar="[format#bold,format#italic,format#underline,#justify,#lists,subsuperscript#subscript,subsuperscript#superscript,links#modifylink,links#unlink,links#anchor,#image,findreplace#find,findreplace#replace,spellcheck#checktext,misctools#specialchars,misctools#sourceedit,#styles,#paraformat,table#table]">
                                                        <popovers jcr:primaryType="nt:unstructured">
                                                            <justify
                                                                    jcr:primaryType="nt:unstructured"
                                                                    items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                                    ref="justify"/>
                                                            <lists
                                                                    jcr:primaryType="nt:unstructured"
                                                                    items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                                                                    ref="lists"/>
                                                            <paraformat
                                                                    jcr:primaryType="nt:unstructured"
                                                                    items="paraformat:getFormats:paraformat-pulldown"
                                                                    ref="paraformat"/>
                                                            <styles
                                                                    jcr:primaryType="nt:unstructured"
                                                                    items="styles:getStyles:styles-pulldown"
                                                                    ref="styles"/>
                                                        </popovers>
                                                    </inline>
                                                </cui>
                                            </uiSettings>
                                        </mediaDescriptionI18n>
										<videoSource
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/select"
											emptyText="Select Video Source"
											fieldLabel="Select Video Source"
											fieldDescription="Select the source of the video"
											name="./videoSource"
											translateOptions="{Boolean}true">
											<items jcr:primaryType="nt:unstructured">
												<normal jcr:primaryType="nt:unstructured"
													text="DAM"
													value="dam"/>
												<rich jcr:primaryType="nt:unstructured"
													text="YouTube"
													value="youtube"/>
											</items>
										</videoSource>
										<damVideoPath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="Select Video Path"
                                            fieldLabel="Video Path"
                                            name="./damVideoPath"
                                            rootPath="/content/dam/customerhub"/>
										<youtubeVideoID
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Enter the ID of the YouTube video"
                                            fieldLabel="YouTube ID"
                                            name="./youtubeVideoID"/>
										<thumbnailPath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="Select Thumbnail Image Path"
                                            fieldLabel="Thumbnail Image Path"
                                            name="./thumbnailPath"
                                            rootPath="/content/dam/customerhub"/>	
										<imagePath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="Select Image Path"
                                            fieldLabel="Image Path"
                                            name="./imagePath"
                                            rootPath="/content/dam/customerhub"/>
										<imageAltI18n
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Enter alt text for the image"
                                            fieldLabel="Image alt text"
                                            name="./imageAltI18n"/>
										<linkTextI18n
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Enter the text for the link"
                                            fieldLabel="Link Text"
                                            name="./linkTextI18n"/>
										<linkURL
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Enter the URL for the link"
                                            fieldLabel="Link URL"
                                            name="./linkURL"/>
										<linkType
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/select"
											emptyText="Select Link Type"
											fieldLabel="Select Link Type"
											fieldDescription="Select the type (Link/Button) of the Link"
											name="./linkType"
											translateOptions="{Boolean}true">
											<items jcr:primaryType="nt:unstructured">
												<normal jcr:primaryType="nt:unstructured"
													text="Link"
													value="link"/>
												<rich jcr:primaryType="nt:unstructured"
													text="Button"
													value="button"/>
											</items>
										</linkType>
										<isExternal
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            fieldDescription="Select checkbox if the link is an external link"
                                            fieldLabel="Is External Link"
                                            name="./isExternal"
											text="Is External Link Text"
											uncheckedValue="{Boolean}false"
											value="{Boolean}true"/>	
                                    </items>
                                </column>
                            </items>
                        </field>
                    </tablist>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
