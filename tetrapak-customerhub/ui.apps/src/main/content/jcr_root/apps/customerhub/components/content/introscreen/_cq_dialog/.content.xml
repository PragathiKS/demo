<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Intro Screen"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="intro-screen"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <heading
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldDescription="Enter Heading i18 Key"
                            fieldLabel="Heading i18 Key"
                            name="./headingI18n"/>
                    <nextBtn
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldDescription="Enter Next Button i18 Key"
                            fieldLabel="Next Button i18 Key"
                            name="./nextBtnI18n"/>
                    <closeBtn
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldDescription="Enter Close Button i18 Key"
                            fieldLabel="Close Button i18 Key"
                            name="./closeBtnI18n"/>
                    <startedBtn
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldDescription="Enter Started Button i18 Key"
                            fieldLabel="Started Button i18 Key"
                            name="./getStartedBtnI18n"/>
                    <list
                        jcr:primaryType="nt:unstructured"
                        jcr:title="List"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldLabel="List of tabs">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./list"
                            validation="multifield-max-7">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <imagepath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="Select Image Path"
                                            fieldLabel="Image Path"
                                            name="./imagePath"
                                            rootPath="/content/dam/customerhub"/>
                                        <alttext
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Enter alt text  i18 Key for the image"
                                            fieldLabel="Image alt text  i18 Key"
                                            name="./imageAltI18n"/>
                                        <title
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Enter title i18 key"
                                            fieldLabel="Title i18 Key"
                                            name="./titleI18n"/>
                                        <description
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Description  i18 Key"
                                            fieldLabel="Description i18 Key"
                                            name="./descriptionI18n"/>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </list>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
