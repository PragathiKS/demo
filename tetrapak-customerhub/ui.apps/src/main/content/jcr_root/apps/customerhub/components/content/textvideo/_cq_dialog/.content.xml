<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Text Video"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <textVideo
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Text Video"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Title"
                                    name="./title"/>
                            <description
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                    fieldLabel="Description"
                                    name="./description"/>
                            <linkText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Link Text"
                                    name="./linkTextI18n"/>
                            <linkUrl
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="Link URL"
                                    name="./linkURL"
                                    rootPath="/content/tetrapak/customerhub"/>
                            <isExternal
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    fieldDescription="Open link in a new window?"
                                    name="./isExternal"
                                    text="New Window"
                                    value="true"/>
                            <videoSource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Select Video Source"
                                    name="./videoSource">
                                <items jcr:primaryType="nt:unstructured">
                                    <youtube
                                            jcr:primaryType="nt:unstructured"
                                            text="Youtube"
                                            value="youtube"/>
                                    <damVideo
                                            jcr:primaryType="nt:unstructured"
                                            text="DAM Video"
                                            value="dam"/>
                                </items>
                            </videoSource>
                            <youtubeVideoID
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Youtube Video ID"
                                    name="./youtubeVideoID"/>
                            <damVideoPath
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="DAM Video Path"
                                    name="./damVideoPath"
                                    rootPath="/content/dam/tetrapak/customerhub"/>
                            <image
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Select a thumbnail for the DAM video"
                                    fieldLabel="Thumbnail"
                                    name="./thumbnailPath"
                                    rootPath="/content/dam/tetrapak/customerhub"/>
                            <textAlignment
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Text Alignment"
                                    name="./textAlignment">
                                <items jcr:primaryType="nt:unstructured">
                                    <left
                                            jcr:primaryType="nt:unstructured"
                                            text="Left"
                                            value="left"/>
                                    <right
                                            jcr:primaryType="nt:unstructured"
                                            text="Right"
                                            value="right"/>
                                </items>
                            </textAlignment>
                        </items>
                    </column>
                </items>
            </textVideo>
        </items>
    </content>
</jcr:root>
