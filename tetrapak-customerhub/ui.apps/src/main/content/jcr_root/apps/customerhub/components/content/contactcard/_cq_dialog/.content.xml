<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
	xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	jcr:primaryType="nt:unstructured" jcr:title="Contact Card"
	sling:resourceType="cq/gui/components/authoring/dialog">
	<content granite:class="contact-card"
		jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
		<items jcr:primaryType="nt:unstructured">
			<column jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/container"
				maximized="{Boolean}true">
				<items jcr:primaryType="nt:unstructured">
					<heading jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldDescription="Enter Heading i18 Key"
						fieldLabel="Heading i18 Key" name="./headingI18n" required="true" />
					<subheading jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldDescription="Enter SubHeading i18 Key"
						fieldLabel="SubHeading i18 Key" name="./subHeadingI18n"
						required="true" />
					<viewcontactbtntext
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldDescription="Enter View Contact Button text i18 Key"
						fieldLabel="View Contact Button text i18 Key"
						name="./viewContactBtnTextI18n" required="true" />
					<imagepath jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
						fieldDescription="Select Image Path" fieldLabel="Image Path"
						name="./imagePath" rootPath="/content/dam/customerhub" required="true"/>
					<imagealttext jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldDescription="Enter alt text for the image"
						fieldLabel="Image alt text" name="./imageAltTextI18n" required="true"/>
				</items>
			</column>
		</items>
	</content>
</jcr:root>
