<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Banner"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <display
                jcr:primaryType="nt:unstructured"
                jcr:title="Display Mode"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <bannertype
                                granite:class="cq-dialog-dropdown-disable-enable"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Select behaviour"
                                name="./bannerType">
                                <items jcr:primaryType="nt:unstructured">
                                    <textimage
                                        jcr:primaryType="nt:unstructured"
                                        text="Text &amp; Image Banner (3:1)"
                                        value="textImage"/>
                                    <textimagewide
                                        jcr:primaryType="nt:unstructured"
                                        text="Text &amp; Image Banner (21:9)"
                                        value="textImage-wide"/>
                                    <hero
                                        jcr:primaryType="nt:unstructured"
                                        text="Top Banner (3:1)"
                                        value="hero"/>
                                    <herowide
                                        jcr:primaryType="nt:unstructured"
                                        text="Top Banner (21:9)"
                                        value="hero-wide"/>
                                </items>
                            </bannertype>
                        </items>
                    </column>
                </items>
            </display>
            <properties
                jcr:primaryType="nt:unstructured"
                jcr:title="Banner"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
							<headingtag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="HeadingTag"								
								fieldDescription="Select tag for title(SEO recomended),H3 is default"
                                name="./headingTag">
                                <items jcr:primaryType="nt:unstructured">
									<h3
                                        jcr:primaryType="nt:unstructured"
                                        text="H3"
                                        value="h3"/>
                                    <h1
                                        jcr:primaryType="nt:unstructured"
                                        text="H1"
                                        value="h1"/>
                                    <h2
                                        jcr:primaryType="nt:unstructured"
                                        text="H2"
                                        value="h2"/>
                                </items>
                            </headingtag>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="For 21:9 banner, we recommend max characters of 30. Always preview the design in different responsive states, from wide desktop to narrow mobile."
                                fieldLabel="Title (Max characters: 50 for more information see tooltip)"
                                maxlength="{Long}50"
                                name="./title"/>
                            <subtitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="For 21:9 banner, we recommend max characters of 35. Always preview the design in different responsive states, from wide desktop to narrow mobile."
                                fieldLabel="Subtitle (Max characters: 50 for more information see tooltip)"
                                maxlength="{Long}50"
                                name="./subtitle"/>
                            <text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldDescription="For 21:9 banner, we recommend max characters of 180. Always preview the design in different responsive states, from wide desktop to narrow mobile."
                                fieldLabel="Description (Max characters: 300 for more information see tooltip)"
                                maxlength="{Long}300"
                                name="./text"/>
                            <linkLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Link Label"
                                name="./linkLabel"/>
                            <linkpath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldLabel="Link path"
                                name="./linkPath"
                                rootPath="/content"/>
                           <fileReference
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                fieldLabel="Image path"
                                path="publicweb/components/content/image/cq:dialog/content/items/image/items/column/items/file"/>
                            <note
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/note"
                                note="Use smart crop to highlight image section to be displayed in mobile."/>
                            <alt
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="publicweb/components/content/image/cq:dialog/content/items/metadata/items/columns/items/column/items/alternativeGroup/items/alt"/>
                        </items>
                    </column>
                </items>
            </properties>
            <anchor
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/include"
                path="/apps/publicweb/components/content/anchorSelector/cq:dialog/content/items/anchor"/>
            <design
                jcr:primaryType="nt:unstructured"
                jcr:title="Design"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <pwThemes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwThemes"/>
                            <pwButtonThemes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwButtonThemes"/>
							<pwDisplay
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/display"/>
							<pwCardTheme
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwCardTheme"/>
                        </items>
                    </column>
                </items>
            </design>
        </items>
    </content>
</jcr:root>
