<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Header Configurations"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <section
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Header Configurations"
                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                        <items jcr:primaryType="nt:unstructured">
                            <logoUrl
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Select logo URL"
                                    fieldLabel="Logo URL"
                                    name="./logoUrl"/>
                            <mLogoLink
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Select Mobile logo Link"
                                    fieldLabel="Mobile logo Link"
                                    name="./mLogoLink"/>
                            <dLogoLink
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Select Desktop logo Link"
                                    fieldLabel="Desktop logo Link"
                                    name="./dLogoLink"/>
                            <headerNavLinks
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Header Links"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    composite="{Boolean}true"
                                    fieldLabel="Header Links configuration"
                                    validation="multifield-max-5">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        name="./headerNavLinks">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <href
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Select Page Path"
                                                        fieldLabel="Page Path"
                                                        name="./href"
                                                        rootPath="/content/tetrapak"/>
                                                <name
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter Name for the Link"
                                                        fieldLabel="Name"
                                                        name="./name"/>
                                                <targetNew
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Open link in a new window ?"
                                                        name="./targetNew"
                                                        text="New Window"
                                                        value="{Boolean}true"
                                                        uncheckedValue="{Boolean}false"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </headerNavLinks>
                        </items>
                    </section>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
