<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Content Hierachy Reference"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <reference
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                            fieldLabel="Page Reference"
                            fieldDescription="Select component content page"
                            name="./pageContentPath"
                            predicate="nosystem"
                            rootPath="/content/tetrapak/customerhub/content-components"/>
                    <subpages
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            text="Include Subpages"
                            fieldDescription="Select checkbox to create children pages"
                            uncheckedValue="{Boolean}false"
                            value="{Boolean}true"
                            name="./includeSubPages"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
