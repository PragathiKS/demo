<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Documents Component"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <section
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Documents i18n keys"
                    sling:resourceType="granite/ui/components/foundation/section">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <sitefilterlabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter Site Filter Label i18n key"
                                    fieldLabel="Site Filter Label i18n key"
                                    name="./siteFilterLabel"
                                    required="true"/>
                            <linefilterlabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter Line Filter Label i18n key"
                                    fieldLabel="Line Filter Label i18n key"
                                    name="./lineFilterLabel"
                                    required="true"/>
                            <documentheading
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter Document Heading i18n key"
                                    fieldLabel="Document Heading i18n key"
                                    name="./documentHeading"
                                    required="true"/>
                            <documenttypelabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter Document Type Label i18n key"
                                    fieldLabel="Document Type Label i18n key"
                                    name="./documentTypeLabel"
                                    required="true"/>
                            <nodocumentsmsg
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter no documents msg i18n key"
                                    fieldLabel="No documents msg i18n key"
                                    name="./noDocumentsMsg"
                                    required="true"/>
                            <errormsg
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter Error msg i18n key"
                                    fieldLabel="Error msg i18n key"
                                    name="./errorMsg"
                                    required="true"/>
                        </items>
                    </column>
                </items>
            </section>
        </items>
    </content>
</jcr:root>
