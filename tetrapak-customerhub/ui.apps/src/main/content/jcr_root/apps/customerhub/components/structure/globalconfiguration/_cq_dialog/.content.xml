<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Global Configurations"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    size="L"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <global
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Global Configurations"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <section
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Left Navigation"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <navHeading
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter Left Navigation Heading i18 Key"
                                                    fieldLabel="Left Navigation Heading i18 Key"
                                                    name="./navHeadingI18n"/>
                                            <closeBtnText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter Close Button Text i18 Key"
                                                    fieldLabel="Close Button Text i18 Key"
                                                    name="./closeBtnText"/>
                                        </items>
                                    </section>
                                    <inactivitydialog
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Inactivity Dialog"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <messageI18n
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter Inactivity alert message i18 Key"
                                                    fieldLabel="Inactivity alert message i18 Key"
                                                    name="./messageI18n"/>
                                            <continueBtnI18n
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter Continue Button i18 Key"
                                                    fieldLabel="Continue Button i18 Key"
                                                    name="./continueBtnI18n"/>
                                            <logoutBtnI18n
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter Logout Button i18 Key"
                                                    fieldLabel="Logout Button i18 Key"
                                                    name="./logoutBtnI18n"/>
                                            <closeBtnI18n
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter Close Button i18 Key"
                                                    fieldLabel="Close Button i18 Key"
                                                    name="./closeBtnI18n"/>
                                            <idleTimeoutMinutes
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                    min="{Long}0"
                                                    fieldDescription="Enter Idle Timeout in Minutes"
                                                    fieldLabel="Idle Timeout in Minutes"
                                                    name="./idleTimeoutMinutes"/>
                                            <autoRefreshSession
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    text="auto refresh session after one hour?"
                                                    fieldDescription="auto refresh session after one hour?"
                                                    fieldLabel="auto refresh session after one hour?"
                                                    value="{Boolean}true"
                                                    name="./autoRefreshSession"/>
                                        </items>
                                    </inactivitydialog>
                                </items>
                            </column>
                        </items>
                    </global>
                    <languageList
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Languages"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    maximized="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <section
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="List of Languages"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <heading
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter i18n key for Heading for Language Selector"
                                                    fieldLabel="Heading for Language Selector"
                                                    name="./headingI18n"/>
                                            <languages
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="List of Languages"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                    composite="{Boolean}true"
                                                    fieldLabel="List of Languages">
                                                <field
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                                        name="./languages">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <language
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Enter language code e.g. en for English"
                                                                fieldLabel="Language Code"
                                                                name="./langCode"/>
                                                        <languageDisplayName
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Enter localized Display Name for language"
                                                                fieldLabel="Localized Display Name for Language"
                                                                name="./languageDisplayName"/>
                                                    </items>
                                                </field>
                                            </languages>
                                        </items>
                                    </section>
                                </items>
                            </column>
                        </items>
                    </languageList>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
