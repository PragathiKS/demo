<div class="pw-subscriptionForm modal tp-modal js-subscription-modal subscription fade" data-module="Subscriptionform"
  tabindex="-1" role="dialog">
  <input type="hidden" class="ComponentNameSubscribe" name="ComponentNameSubscribe" value="ComponentNameSubscribe">
  <input type="hidden" class="parentComponentSubscribe" name="parentComponentSubscribe"
    value="parentComponentSubscribe">
  <div class="modal-dialog modal-dialog-centered tp-modal-dialog modal-xl">
    <div class="modal-content tp-modal-content pw-padding--regular pw-margin--regular">
      <div class="modal-header pw-subscription__header" auto_locator="subscriptionSectionHeader">
        <h2 role="heading" class="pw-subscription__header__heading" auto_locator="headingFontStep1">Subscribe to
          Marketing Communication</h2>
        <button type="button" class="tp-close-btn icon-Close_pw pw-subscription__header__close js-close-btn"
          aria-label="close button" title="close button"></button>
      </div>
      <div class="modal-body pw-subscription__body pw-sf_body_componentName" auto_locator="subscriptionSectionBody">
        <div id="sfUs" class="pw-container" data-locator="Subscriptionform">
          <div class="pw-subscriptionForm-form" id="pw-sfUs" auto_locator="SubscriptionFormStepsWrapper">
            <div class="tab-content">
              <div class="i18n-keys d-none"
                data-i18n="Services, Packaging, Processing, Innovation,Sustainability,End To End - Solutions"></div>
              <form class="pw-form pw-form-subscriptionForm" accept-charset="UTF-8"
                data-sf-api-servlet="/content/tetrapak/public-web/lang-masters/en/home/jcr:content/root/responsivegrid/subscriptionform.padrotsubscription.json"
                data-sf-countrycode="gb" data-sf-langcode="en" autocomplete="off">
                <input type="text" name="pardot_extra_field" id="pardot_extra_field_sf" class="d-none" tabindex="-1">
                <div class="sf-tab-pane active" role="tabpanel" id="sf-step-1">
                  <div class="row no-gutters">
                    <div class="col-lg-6 separator" auto_locator="subscriptionFormLeftContainerStep1">
                      <div class="row no-gutters">
                        <div class="col-sm-12 main-heading"
                          auto_locator="subscriptionFormLeftContainerHeadingTextStep1">
                          <h2 class="tpatom-heading tpatom-heading--">Contact us</h2>
                        </div>
                      </div>
                      <div class="row no-gutters">
                        <div class="descriptionsubscriptionForm col-lg-12"
                          auto_locator="subscriptionFormLeftContainerTextAreaStep1">
                          Loren ipsum
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-6" auto_locator="subscriptionFormRightContainerStep1">
                      <div class="tab-content tab-content-steps">
                        <div class="row">
                          <div class="col-sm-12 formfield" auto_locator="subscriptionFormListContainerStep1">
                            <div class="formfield">
                              <div class="form-group">
                                <label for="email" auto_locator="emailHelpText">email</label>
                                <input type="email" class="form-control validateForTags" id="email" name="email"
                                  placeholder="example@example.com" required="" auto_locator="emailInput">
                                <div class="errorMsg">Please enter your email in this format: example@example.com</div>
                              </div>
                            </div>
                            <div class="formfield">
                              <div class="form-group">
                                <label for="firstName" auto_locator="firstNameHelpText">First name</label>
                                <input type="text" class="form-control " id="firstName" name="firstName" required=""
                                  auto_locator="firstNameInput">
                                <div class="errorMsg">Enter your first name</div>
                              </div>
                            </div>
                            <div class="formfield">
                              <div class="form-group">
                                <label for="lastName" auto_locator="lastNameHelpText">Last name</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" required=""
                                  auto_locator="lastNameInput">
                                <div class="errorMsg">Enter your last name</div>
                              </div>
                            </div>
                            <div class="row no-gutter">
                              <div class="col-md-12 col-lg-6">
                                <div class="formfield country-field country" data-country-name-label="Country">
                                  <label for="country" auto_locator="subsFormCountryHelpText">Country/Location</label>
                                  <div class="pw-form__dropdown dropdown text-left">
                                    <button class="btn dropdown-toggle pw-form__dropdown__toggle text-left"
                                      type="button" data-toggle="dropdown" aria-haspopup="true"
                                      auto_locator="subsFormCountrySelectDropdown" aria-expanded="false">
                                      <span class="js-pw-form__dropdown__country-text">Select Country/Location</span>
                                      <i class="icon icon-Arrow_Right_pw"></i></button>

                                    <div class="dropdown-menu pw-form__dropdown__menu">
                                      <a href="#" class="dropdown-item " id='ddtest' data-country="albania"
                                        data-countrytitle="Albania">Albania
                                      </a>
                                      <a href="#" class="dropdown-item " data-country="algeria"
                                        data-countrytitle="Algeria">Algeria
                                      </a>
                                    </div>
                                    <input type="hidden" name="countryTitle" class="form-control validateForTags"
                                      id="country">
                                  </div>
                                  <div data-country-error-msg="Please select country" class="errorMsg">Please select country</div>
                                </div>
                              </div>
                            </div>
                            <div class="formfield">
                              <div class="form-group formfield">
                                <div class="checboxField">
                                  <input id="consentcheckbox" class="form-control tpatom-checkbox__input float-left"
                                    required="" type="checkbox" name="consent">
                                  <label class="consentlabel" for="consentcheckbox">
                                    <p>Yes, I want to receive communication from Tetra Pak</p>
                                  </label>
                                </div>
                                <div class="errorMsg">Please select marketing consent</div>
                              </div>
                            </div>
                            <div class="row no-gutters padding-top">
                              <div class="col-sm-12 col-md-6">

                                <div class="checboxField">
                                  <label class="typeOfCommunicationLabel subscription-checkbox-label"
                                    for="typeOfCommunicationcheckbox-3">
                                    <input id="typeOfCommunicationcheckbox-3"
                                      class="form-control tpatom-checkbox__input float-left communication-type"
                                      type="checkbox" name="event" value="Event Invitations">
                                    <i class="tpatom-checkbox__icon icon icon-Tick float-left"></i> Event
                                    Invitations</label>
                                </div>
                              </div>
                            </div>
                            <div class="formfield">
                              <p></p>
                              <p>I accept <a>Tetra Pakâ€™s privacy policy</a></p>
                              <p></p>
                            </div>
                          </div>
                        </div>
                        <div class="row no-gutters subscribeButton button-group">
                          <button data-target="#sf-step-final" type="submit" class="tpatom-btn tpatom-btn--primary "
                            auto_locator="subscriptionFormNextButtonStep">
                            <span class="tp-next-btn__text">Subscribe</span>
                            <i class="tpatom-button__icon "></i>
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="sf-tab-pane" role="tabpanel" id="sf-step-final"
                  auto_locator="subscriptionFormListContainerStepFinal">
                  <div class="row thankyou">
                    <div class="col text-center" auto_locator="sfUsThankYouMessage">
                      <div auto_locator="sfUsThankYouPageMessage">
                        <h2 class="tpatom-heading tpatom-heading--">thank you for your request</h2>
                      </div>
                      <div class="descriptionTextThankyou" auto_locator="sfUsThankYouPageDescription">
                        <p>We will get back to you as soon as possible</p>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>