<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Public Web Header"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <general
                    jcr:primaryType="nt:unstructured"
                    jcr:title="General"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <enableHeroImage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    name="./enableHeroImage"
                                    text="Enable Hero Image"
                                    value="true"/>
                            <enableHeroImagexDelete
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                    name="./enableHeroImage@Delete"
                                    value="{Boolean}true"/>
                            <megamenuLinks
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    fieldDescription="Click 'Add field' to add a new menu title and link"
                                    fieldLabel="Mega Menu Links">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                        acs-commons-nested=""
                                        name="./megamenuLinks">
                                        <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <linktext
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter Link Text i18 key"
                                                        fieldLabel="Link Text i18 Key"
                                                        name="./linkTextI18n"/>
                                                    <linktooltip
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter Link Tool Tip i18 key"
                                                        fieldLabel="Link Tool Tip i18 Key"
                                                        name="./linkTooltipI18n"/>
                                                    <linkpath
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Select Link"
                                                        fieldLabel="Link Path"
                                                        name="./linkPath"
                                                        rootPath="/content"/>
                                                </items>
                                            </column>
                                        </items>
                                </field>
                            </megamenuLinks>
                            <logintext
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter Login Text i18 key"
                                    fieldLabel="Login Text i18 Key"
                                    name="./loginTextI18n"/>
                        </items>
                    </column>
                </items>
            </general>
            <search
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Search"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <searchrootpath
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Enter the path under which the search takes place"
                                    fieldLabel="Search Root Path"
                                    name="./searchRootPath"
                                    rootPath="/content"/>
                            <searchresultspath
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Enter the path for search results page"
                                    fieldLabel="Search Results Page Path"
                                    name="./searchResultsPath"
                                    rootPath="/content"/>
                            <searchplaceholdertext
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter Placeholder text that will appear in the Search box"
                                    fieldLabel="Placeholder Text"
                                    name="./searchPlaceholderText"/>
                            <tabs
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    fieldDescription="Click 'Add field' to add a new tile"
                                	maxlinksallowed="4"
                                    fieldLabel="Search Panel">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                    acs-commons-nested=""
                                    name="./searchPanelTiles">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <tileimage
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/coral/foundation/form/pathfield"
                                                    fieldDescription="Enter the path for image to that will appear on tile."
                                                    fieldLabel="Tile Image"
                                                    name="./tileImage"
                                                    rootPath="/content/dam/publicweb"/>
                                                <imagealt
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/coral/foundation/form/textfield"
                                                    fieldDescription="Enter Alt Text for Tile Image"
                                                    fieldLabel="Tile Image Alt Text"
                                                    name="./tileImageAltI18n"/>
                                                <tiletitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/coral/foundation/form/textfield"
                                                    fieldDescription="Enter Link Text for the tab"
                                                    fieldLabel="Tile Title"
                                                    name="./tileTitle"/>
                                                <tiledescription
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldDescription="Enter description to appear under the tile."
                                                    fieldLabel="Tile Description"
                                                    name="./tileDescription"/>
                                                <tilelinkpath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Enter the path for the page linking to the image."
                                                    fieldLabel="Tile Link Path"
                                                    name="./tileLinkPath"
                                                    rootPath="/content"/>
                                                <tilelinktarget
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Tile Link Target"
                                                    name="./tileLinkTarget">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <new
                                                            jcr:primaryType="nt:unstructured"
                                                            text="New Window"
                                                            value="_blank"/>
                                                        <same
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Same Window"
                                                            value="_self"/>
                                                    </items>
                                                </tilelinktarget>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </tabs>
                        </items>
                    </column>
                </items>
            </search>
        </items>
    </content>
</jcr:root>
