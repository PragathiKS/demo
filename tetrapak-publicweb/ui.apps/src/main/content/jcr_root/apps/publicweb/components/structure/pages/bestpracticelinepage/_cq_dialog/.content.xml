<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Best Practice Line Page"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[cq.common.wcm,cq.siteadmin.admin.properties]"
          mode="edit">
    <content
            granite:class="cq-dialog-content-page"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    granite:rel="cq-siteadmin-admin-properties-tabs"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <practiceline
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Best Practice Line Configuration"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <practiceLineProperties
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Best Practice Line Properties"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <ctaTexti18nKey
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    cq:showOnCreate="{Boolean}true"
                                                    fieldLabel="Link Text"
                                                    name="./ctaTexti18nKey"/>
                                            <linkTarget
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    cq:showOnCreate="{Boolean}true"
                                                    fieldLabel="Link Target"
                                                    name="./linkTarget">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <new
                                                            jcr:primaryType="nt:unstructured"
                                                            text="New Window"
                                                            value="_blank"/>
                                                    <same
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Same Window"
                                                            value="_self"/>
                                                </items>
                                            </linkTarget>
                                            <imagepath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    cq:showOnCreate="{Boolean}true"
                                                    fieldDescription="Select Article Image Path"
                                                    fieldLabel="Best Practice Line Image Path"
                                                    name="./practiceImagePath"
                                                    rootPath="/content/dam/publicweb"/>
                                            <imagealt
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    cq:showOnCreate="{Boolean}true"
                                                    fieldDescription="Enter Alt Text"
                                                    fieldLabel="Alt Text"
                                                    name="./practiceImageAltI18n"/>
                                        </items>
                                    </practiceLineProperties>
                                </items>
                            </column>
                        </items>
                    </practiceline>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
