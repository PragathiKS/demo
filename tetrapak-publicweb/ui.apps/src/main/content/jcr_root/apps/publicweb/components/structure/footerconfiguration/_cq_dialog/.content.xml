<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Footer Configuration"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <general
                jcr:primaryType="nt:unstructured"
                jcr:title="General"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <general
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <logoimage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldDescription="Link to Logo image"
                                fieldLabel="Logo Image path"
                                name="./logoImagePath"
                                rootPath="/content/dam/tetrapak"/>
                            <logolink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldDescription="Where the logo should direct"
                                fieldLabel="Logo Image link"
                                name="./logoLink"
                                rootPath="/content/tetrapak/publicweb"/>
                            <logoalt
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Required for Accessibility use"
                                fieldLabel="Logo Image Alt Text"
                                name="./logoAlt"
                                required="true"/>
                            <footerLinks
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldDescription="Click 'Add field' to add a new User Submenu title and links"
                                fieldLabel="Navigation Links">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    acs-commons-nested="NODE_STORE"
                                    name="./footerLinks">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <linklabel
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Text available for the visitor"
                                                    fieldLabel="Link Text"
                                                    name="./linkLabel"
                                                    required="true"/>
                                                <linkpath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                    fieldDescription="Link to destination URL"
                                                    fieldLabel="Link Path"
                                                    name="./linkPath"
                                                    required="true"
                                                    rootPath="/content/tetrapak/publicweb"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </footerLinks>
                            <gototoplabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="To Top Anchor Label"
                                name="./goToTopLabel"/>
							<logobackground
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Footer logo Background (RGB value)"
                                fieldLabel="Footer Logo Background (RGB value)"
                                name="./logoBackground"/>
                        </items>
                    </general>
                </items>
            </general>
            <socialLink
                jcr:primaryType="nt:unstructured"
                jcr:title="Social Link"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <socialLinks
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldDescription="Click 'Add field' to add a new Social channel and link"
                                fieldLabel="Social Links"
                                pw-max-items="6">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./socialLinks">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <socialmedia
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldDescription="Add the social media icon"
                                                    fieldLabel="Social Media Icon"
                                                    name="./socialMedia"
                                                    required="true">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <linkedin
                                                            jcr:primaryType="nt:unstructured"
                                                            text="LinkedIn"
                                                            value="Linkedin"/>
                                                        <facebook
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Facebook"
                                                            value="Facebook"/>
                                                        <twitter
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Twitter"
                                                            value="Twitter"/>
                                                        <youtube
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Youtube"
                                                            value="Youtube"/>
                                                        <pinterest
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Pinterest"
                                                            value="Pinterest"/>
                                                        <instagram
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Instagram"
                                                            value="instagram"/>
                                                        <wechat
                                                            jcr:primaryType="nt:unstructured"
                                                            text="WeChat"
                                                            value="WeChat"/>
                                                        <weibo
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Weibo"
                                                            value="Weibo"/>
														<vkontakte
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Vkontakte"
                                                            value="Vkontakte"/>
														<xing
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Xing"
                                                            value="Xing"/>
                                                    </items>
                                                </socialmedia>
                                                <sociallinkpath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Add social media channel link"
                                                    fieldLabel="Social media link path"
                                                    name="./socialMediaLink"
                                                    required="true"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </socialLinks>
                        </items>
                    </column>
                </items>
            </socialLink>
            <wechatQrCode
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Wechat QR code"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <wechatQrCode
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <wechatQrCode
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                    class="cq-droptarget"
                                    fieldLabel="We chat QR code"
                                    fileNameParameter="./wechatQrCode"
                                    fileReferenceParameter="./wechatQrCodeReference"
                                    mimeTypes="[image/gif,image/jpeg,image/png]"
                                    name="./wechatQRcode"
                                    multiple="{Boolean}false"
                                    title="Upload Image Asset"
                                    uploadUrl="${suffix.path}"
                                    useHTML5="{Boolean}true"
                                    allowUpload="{Boolean}false" />
                            <qrAltText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Required for Accessibility use"
                                    fieldLabel="Alt Text"
                                    name="./qrAltText"/>
                        </items>
                    </wechatQrCode>
                </items>
            </wechatQrCode>
        </items>
    </content>
</jcr:root>
