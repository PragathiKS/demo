<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Image Text Button"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items
            jcr:primaryType="nt:unstructured"
            sling:hideChildren="[column]">
            <imageTextButton
                jcr:primaryType="nt:unstructured"
                jcr:title="Image Text Button"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Title"
                                name="./title"/>
                            <subTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Subtitle"
                                name="./subtitle"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldLabel="Description"
                                name="./description"/>
                            <ctaLinkText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="CTA Link Text"
                                name="./ctaLinkTexti18n"/>
                            <ctaLinkUrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="CTA Link URL"
                                rootPath="/content/tetrapak/public-web"
                                name="./ctaLinkURL"/>
                            <processingHotspotUrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="Processing Hotspot URL"
                                rootPath="/content/tetrapak/public-web"
                                name="./processingHotspotUrl"/>
                            <openProcessingHotspotInNewWindow
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                name="./openProcessingHotspotInNewWindow"
                                text="Open Processing Hotspot In New Window?"
                                value="true"/>
                            <openProcessingHotspotInNewWindowDelete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                name="./openProcessingHotspotInNewWindow@Delete"
                                value="{Boolean}true"/>
                            <packagingHotspotUrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="Packaging Hotspot URL"
                                rootPath="/content/tetrapak/public-web"
                                name="./packagingHotspotUrl"/>
                            <openPackagingHotspotInNewWindow
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                name="./openPackagingHotspotInNewWindow"
                                text="Open Packaging Hotspot In New Window?"
                                value="true"/>
                            <openPackagingHotspotInNewWindowDelete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                name="./openPackagingHotspotInNewWindow@Delete"
                                value="{Boolean}true"/>
                            <servicesHotspotUrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="Services Hotspot URL"
                                rootPath="/content/tetrapak/public-web"
                                name="./servicesHotspotUrl"/>
                            <openServicesHotspotInNewWindow
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                name="./openServicesHotspotInNewWindow"
                                text="Open Services Hotspot In New Window?"
                                value="true"/>
                            <openServicesHotspotInNewWindowDelete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                name="./openServicesHotspotInNewWindow@Delete"
                                value="{Boolean}true"/>
                        </items>
                    </column>
                </items>
            </imageTextButton>
        </items>
    </content>
</jcr:root>