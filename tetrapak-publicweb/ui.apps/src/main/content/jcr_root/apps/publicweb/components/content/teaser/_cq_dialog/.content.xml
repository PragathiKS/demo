<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Teaser Component Configurations"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <teaser
                jcr:primaryType="nt:unstructured"
                jcr:title="Teaser"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Heading"
                                name="./heading"/>
                            <contentType
                                granite:class="cq-dialog-dropdown-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Select Content-Type"
                                name="./contentType">
                                <items jcr:primaryType="nt:unstructured">
                                    <automatic
                                        jcr:primaryType="nt:unstructured"
                                        text="Automatic"
                                        value="automatic"/>
                                    <semi-automatic
                                        jcr:primaryType="nt:unstructured"
                                        text="Semi-automatic"
                                        value="semi-automatic"/>
                                    <manual
                                        jcr:primaryType="nt:unstructured"
                                        text="Manual"
                                        value="manual"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-dropdown-showhide-target=".contentType-showhide-target"/>
                            </contentType>
                            <automaticcontent
                                granite:class="hide contentType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                fieldDescription="In automatic way content is searched with authored tags"
                                showhidetargetvalue="automatic">
                                <items jcr:primaryType="nt:unstructured">
                                    <tags
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/common/tagspicker"
                                        fieldDescription="Select at one or more tags to populate values"
                                        fieldLabel="Tags"
                                        name="./tags"
                                        rootPath="/content/cq:tags/tetrapak/publicweb"/>
                                    <maxTeasers
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                        fieldDescription="Enter the maximum number of teasers to be shown: min-1; max-12"
                                        fieldLabel="Maximum number of teasers to be shown"
                                        max="12"
                                        min="1"
                                        name="./maxTeasers"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="automatic"/>
                            </automaticcontent>
                            <semiautomaticcontent
                                granite:class="hide contentType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                fieldDescription="In semi-automatic way content is pulled with authored pages"
                                showhidetargetvalue="semi-automatic">
                                <items jcr:primaryType="nt:unstructured">
                                    <semiAutomaticList
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="List"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Add page paths to automatically populate values"
                                        fieldLabel="List of pages"
                                        validation="multifield-max-12">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./semiAutomaticList">
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <pageLink
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                            fieldLabel="Page URL"
                                                            name="./pageURL"
                                                            rootPath="/content/tetrapak/public-web"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </semiAutomaticList>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="semi-automatic"/>
                            </semiautomaticcontent>
                            <manualcontent
                                granite:class="hide contentType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                fieldDescription="In manual way content is displayed which is authored here in this dialog"
                                showhidetargetvalue="manual">
                                <items jcr:primaryType="nt:unstructured">
                                    <manualList
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="&#x9;&#xa;Configure Teaser"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldLabel="&#x9;&#xa;Configure Teaser"
                                        validation="multifield-max-12">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./manualList">
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <title
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Title"
                                                            name="./title"/>
                                                        <vanityDescription
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                            fieldLabel="Description"
                                                            name="./description"/>
                                                        <linkText
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Link Text"
                                                            name="./linkText"/>
                                                        <linkPath
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                            fieldLabel="Link URL"
                                                            name="./linkPath"
                                                            rootPath="/content/tetrapak/public-web"/>
                                                        <linktarget
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            name="./linkTarget"
                                                            text="New Window"
                                                            uncheckedValue="_self"
                                                            value="_blank"/>
                                                        <pwButtonThemes
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                                            fieldDescription="Please select the button background theme"
                                                            path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwButtonThemes"/>
                                                        <fileReference
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                                            fieldLabel="Image path"
                                                            path="publicweb/components/content/image/cq:dialog/content/items/image/items/column/items/file"/>
                                                        <alt
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                                            path="publicweb/components/content/image/cq:dialog/content/items/metadata/items/columns/items/column/items/alternativeGroup/items/alt"/>
                                                        <pwLinkThemes
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                                            path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwLinkThemes"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </manualList>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="manual"/>
                            </manualcontent>
                        </items>
                    </column>
                </items>
            </teaser>
            <anchor
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/include"
                path="/apps/publicweb/components/content/anchorSelector/cq:dialog/content/items/anchor"/>
            <design
                jcr:primaryType="nt:unstructured"
                jcr:title="Design"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <pwThemes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwThemes"/>
                        </items>
                    </column>
                </items>
            </design>
        </items>
    </content>
</jcr:root>
