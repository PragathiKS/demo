<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Banner"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <properties
                jcr:primaryType="nt:unstructured"
                jcr:title="Properties"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <bannertype
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Select the behavior of the Banner"
                                fieldLabel="Behavior"
                                name="./bannerType">
                                <items jcr:primaryType="nt:unstructured">
                                    <textimage
                                        jcr:primaryType="nt:unstructured"
                                        text="Text &amp; Image Banner"
                                        value="textImage"/>
                                    <hero
                                        jcr:primaryType="nt:unstructured"
                                        text="Hero Banner"
                                        value="hero"/>
                                </items>
                            </bannertype>
                            <subtitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter sub title"
                                fieldLabel="Sub Title"
                                maxlength="{Long}35"
                                name="./subtitle"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter title"
                                fieldLabel="Title"
                                maxlength="{Long}30"
                                name="./title"/>
                            <text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldDescription="Enter text"
                                fieldLabel="Text"
                                maxlength="{Long}220"
                                name="./bannerText"/>
                            <linkLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter Link Text"
                                fieldLabel="Link Label"
                                name="./linkLabel"/>
                            <linkpath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Select Link"
                                fieldLabel="Link Path"
                                name="./linkPath"
                                rootPath="/content/tetrapak/public-web"/>
                            <linktarget
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Open link in a new window ?"
                                name="./linkTarget"
                                text="New Window"
                                uncheckedValue="_self"
                                value="_blank"/>
                            <fileReference
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                fieldLabel="Image Path"
                                path="publicweb/components/content/image/cq:dialog/content/items/image/items/column/items/file">
                            </fileReference>
                            <alt
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                fieldDescription="Enter Alt Text for Image"
                                path="publicweb/components/content/image/cq:dialog/content/items/metadata/items/columns/items/column/items/alternativeGroup/items/alt"/>
                            <pwDisplay
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                fieldDescription="Please select the button background theme"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/display"/>
                            <pwThemes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                fieldDescription="Please select a background theme"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwThemes"/>
                            <pwLinkThemes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwLinkThemes"/>
                            <pwButtonThemes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                fieldDescription="Please select the button background theme"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwButtonThemes"/>
                        </items>
                    </column>
                </items>
            </properties>
            <anchor
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/include"
                path="/apps/publicweb/components/content/anchorSelector/cq:dialog/content/items/anchor"/>
        </items>
    </content>
</jcr:root>
