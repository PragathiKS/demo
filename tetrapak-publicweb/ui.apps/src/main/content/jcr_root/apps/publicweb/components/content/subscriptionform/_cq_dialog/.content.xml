<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Subscription form"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <anchor
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/include"
                    path="/apps/publicweb/components/content/anchorSelector/cq:dialog/content/items/anchor"/>
            <design
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Design"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <pwThemes
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwThemes"/>
                        </items>
                    </column>
                </items>
            </design>
            <form
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Subscription Form"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Suggested to use characters less than recommended Limit: 40 chars considering translations"
                                    fieldLabel="Heading"
                                    name="./headingSubscription"/>
                            <apiurl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Provide Global BU form handler URL. Valid URL starts with - https://go.tetrapak.com/"
                                fieldLabel="Global BU form handler URL"
                                name="./pardotUrlSubscription"/>
							<chinaapiurl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Provide China BU form handler URL. Valid URL starts with either - https://go.demo.pardot.com/ or https://go-cn.tetrapak.com/"
                                fieldLabel="China BU form handler URL"
                                name="./pardotChinaUrlSubscription"/>								
                            <thankyou
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Thank you section"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <morebuttonlabel
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Suggested to use characters less than recommended Limit: 40 chars considering translations"
                                            fieldLabel="More button label"
                                            name="./moreButtonLabelSubscription"/>
                                    <morebuttonaction
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="Provide Link for More Whitepapers button"
                                            fieldLabel="More button link/action"
                                            name="./moreButtonActionSubscription"
                                            rootPath="/content/tetrapak/publicweb"/>
                                </items>
                            </thankyou>
                        </items>
                    </column>
                </items>
            </form>
        </items>
    </content>
</jcr:root>
