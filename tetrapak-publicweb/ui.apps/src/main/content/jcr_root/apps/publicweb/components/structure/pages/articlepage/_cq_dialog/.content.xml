<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Article Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm,cq.siteadmin.admin.properties]"
    mode="edit">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container"
        class="cq-dialog-content-page">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container"
                rel="cq-siteadmin-admin-properties-tabs">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                    type="nav"/>
                <items jcr:primaryType="nt:unstructured">
                    <article
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Article Configuration"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <articleProperties
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Article Properties"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <showArticleDate
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    text="Show Article Date?"
                                                    value="true"
                                                    name="./showArticleDate" />
                                            <showArticleDateDelete
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    name="./showArticleDate@Delete"
                                                    value="{Boolean}true"/>
                                            <articleDate
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                                    fieldLabel="Article Date"
                                                    fieldDescription="Published date is used if not configured"
                                                    type="date"
                                                    name="./articleDate" />
                                            <articleImagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Select Article Image Path"
                                                    fieldLabel="Article Image Path"
                                                    name="./articleImagePath"
                                                    rootPath="/content/dam/publicweb"/>
                                            <imageAltText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter Alt Text"
                                                    fieldLabel="Article Image Alt Text"
                                                    name="./imageAltTextI18n"/>
                                            <linkText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Link Text"
                                                    name="./linkText"/>
                                          
                                            <stickyNavDetails
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="Sticky Navigation"
                                                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                                    <items
                                                        jcr:primaryType="nt:unstructured">
                                                        <showStickyNavigation
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            text="Show Sticky Navigation?"
                                                            value="true"
                                                            name="./showStickyNavigation" />
                                                        <showStickyNavigationDelete
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                            name="./showStickyNavigation@Delete"
                                                            value="{Boolean}true"/>
                                                        <thumbnail
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                            rootPath="/content/dam/publicweb"
                                                            fieldLabel="Thumbnail Image Path"
                                                            name="./thumbnailImagePath"/>
                                                        <stickyNavTitle
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldLabel="Sticky Navigation Title"
                                                            name="./stickyNavTitle"/>
                                                        <stickyNavDescription
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldLabel="Sticky Navigation Description"
                                                            name="./stickyNavDescription"/>
                                                        <navLinkText
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Navigation Link Text"
                                                            name="./navLinkText"/>
                                                        <navLinkPath
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                            rootPath="/content/tetrapak/public-web/"
                                                            fieldLabel="Navigation Link Path"
                                                            name="./navLinkPath"/>
                                                        <navLinkTarget
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                fieldLabel="Navigation Link Target"
                                                                name="./navLinkTarget">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <new
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="New Window"
                                                                        value="_blank"/>
                                                                    <same
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Same Window"
                                                                        value="_self"/>
                                                                </items>
                                                        </navLinkTarget>
                                                    </items>
                                            </stickyNavDetails>
                                          
                                        </items>
                                    </articleProperties>
                                </items>
                            </column>
                        </items>
                    </article>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
