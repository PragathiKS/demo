<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Public Web Image Text Banner"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items
            jcr:primaryType="nt:unstructured"
            sling:hideChildren="[column]">
            <properties
                jcr:primaryType="nt:unstructured"
                jcr:title="Properties"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <subtitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter sub title"
                                fieldLabel="Sub Title"
                                name="./bannerSubtitleI18n"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter title"
                                fieldLabel="Title"
                                name="./titleI18n"/>
                            <desktopimage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Select Image Path for desktop"
                                    fieldLabel="Dekstop Image Path"
                                    name="./desktopImage"
                                    rootPath="/content/dam/publicweb"/>
                            <desktopimagealt
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter Alt Text for dekstop image"
                                    fieldLabel="Desktop Image Alt Text"
                                    name="./desktopImageAltI18n"/>
                            <mobileimage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Select Image Path for mobile"
                                    fieldLabel="Mobile Image Path"
                                    name="./mobileImage"
                                    rootPath="/content/dam/publicweb"/>   
                            <mobileimagealt
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter Alt Text for mobile image"
                                    fieldLabel="Mobile Image Alt Text"
                                    name="./mobileImageAltI18n"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldDescription="Enter text"
                                fieldLabel="Description"
                                name="./bannerDescriptionI18n"/>     
                            <contentalignment
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                defaultValue="left"
                                fieldDescription="Set the content alignment"
                                fieldLabel="Content Alignment"
                                name="./contentAlignment">
                                <items jcr:primaryType="nt:unstructured">
                                    <left
                                        jcr:primaryType="nt:unstructured"
                                        selected="true"
                                        text="Left"
                                        value="pw-banner"/>
                                    <right
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="pw-banner--right"/>
                                </items>
                            </contentalignment>
                            <contrastLayer
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                defaultValue=""
                                fieldDescription="Add a opacity layer to generate text contrast"
                                fieldLabel="Text Contrast Layer"
                                name="./contrastLayer">
                                <items jcr:primaryType="nt:unstructured">
                                    <disabled
                                        jcr:primaryType="nt:unstructured"
                                        selected="true"
                                        text="Disabled"
                                        value=""/>
                                    <flat
                                        jcr:primaryType="nt:unstructured"
                                        text="Flat"
                                        value="flat"/>
                                    <toRight
                                        jcr:primaryType="nt:unstructured"
                                        text="Gradient left to right"
                                        value="gradient-to-right"/>
                                    <toLeft
                                        jcr:primaryType="nt:unstructured"
                                        text="Gradient right to left"
                                        value="gradient-to-left"/>
                                </items>
                            </contrastLayer>
                            <ctatext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter Link Text"
                                fieldLabel="Link Text"
                                name="./bannerCtaTextI18n"/>
                            <ctapath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Select Link"
                                fieldLabel="Link Path"
                                name="./bannerCtaPath"
                                rootPath="/content"/>
                            <targetBlank
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Open link in a new window ?"
                                text="New Window"
                                name="./targetBlank"/>
                            <ctatooltip
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter Link Tool Tip"
                                fieldLabel="Link Tool Tip"
                                name="./bannerCtaTooltipI18n"/>
                        </items>
                    </column>
                </items>
            </properties>
        </items>
    </content>
</jcr:root>