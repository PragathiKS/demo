<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Public Web Image Text Banner"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items
            jcr:primaryType="nt:unstructured"
            sling:hideChildren="[column]">
            <properties
                jcr:primaryType="nt:unstructured"
                jcr:title="Properties"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <subtitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter sub title i18 Key"
                                fieldLabel="Sub Title i18 Key"
                                name="./bannerSubtitleI18n"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter title i18 Key"
                                fieldLabel="Title i18 Key"
                                name="./titleI18n"/>
                            <desktopimage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Select Image Path for desktop"
                                    fieldLabel="Dekstop Image Path"
                                    name="./desktopImage"
                                    rootPath="/content/dam/publicweb"/>
                            <desktopimagealt
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter Alt Text i18 Key for dekstop image"
                                    fieldLabel="Desktop Image Alt Text i18 Key"
                                    name="./desktopImageAltI18n"/>
                            <mobileimage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Select Image Path for mobile"
                                    fieldLabel="Mobile Image Path"
                                    name="./mobileImage"
                                    rootPath="/content/dam/publicweb"/>   
                            <mobileimagealt
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter Alt Text i18 Key for mobile image"
                                    fieldLabel="Mobile Image Alt Text i18 Key"
                                    name="./mobileImageAltI18n"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldDescription="Enter text i18 Key"
                                fieldLabel="Text i18 Key"
                                name="./bannerDescriptionI18n"/>     
                            <contentalignment
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                defaultValue="left"
                                fieldDescription="Set the content alignment"
                                fieldLabel="Content Alignment"
                                name="./contentAlignment">
                                <items jcr:primaryType="nt:unstructured">
                                    <left
                                        jcr:primaryType="nt:unstructured"
                                        selected="true"
                                        text="Left"
                                        value="text-left"/>
                                    <right
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="text-right"/>
                                </items>
                            </contentalignment>
                            <ctatext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter Link Text i18 Key"
                                fieldLabel="Link Text i18 Key"
                                name="./bannerCtaTextI18n"/>
                            <ctapath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Select Link"
                                fieldLabel="Link Path"
                                name="./bannerCtaPath"
                                rootPath="/content"/>
                            <targetBlank
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Open link in a new window ?"
                                text="New Window"
                                name="./targetBlank"/>
                            <ctatooltip
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter Link Tool Tip i18 key"
                                fieldLabel="Link Tool Tip i18 Key"
                                name="./bannerCtaTooltipI18n"/>
                        </items>
                    </column>
                </items>
            </properties>
        </items>
    </content>
</jcr:root>