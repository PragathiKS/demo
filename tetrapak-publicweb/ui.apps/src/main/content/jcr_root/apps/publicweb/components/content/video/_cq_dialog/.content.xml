<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Video"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <video
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Video"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <videoSource
                                    granite:class="cq-dialog-dropdown-showhide"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldDescription="Prefered video option is AEM DAM"
                                    fieldLabel="Select Video Source"
                                    name="./videoSource">
                                <items jcr:primaryType="nt:unstructured">
                                    <damVideo
                                            jcr:primaryType="nt:unstructured"
                                            text="DAM Video"
                                            value="damVideo"/>
                                    <youtube
                                            jcr:primaryType="nt:unstructured"
                                            text="Youtube"
                                            value="youtube"/>
                                </items>
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        cq-dialog-dropdown-showhide-target=".videoType-showhide-target"/>
                            </videoSource>
                            <youtubeId
                                    granite:class="hide videoType-showhide-target"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <youtubeVideoID
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="Enter YouTube ID e.g. fR-esiS1Pn0"
                                            fieldLabel="Youtube Video ID"
                                            name="./youtubeVideoID"/>
                                </items>
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        showhidetargetvalue="youtube"/>
                            </youtubeId>
                            <damVideoSource
                                    granite:class="hide videoType-showhide-target"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <damVideoPath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                            fieldDescription="Please select a video from DAM"
                                            fieldLabel="DAM Video Path"
                                            name="./damVideoPath"
                                            rootPath="/content/dam/tetrapak/publicweb"/>
                                    <image
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                            fieldDescription="Please select a poster image for the DAM video"
                                            fieldLabel="Poster image"
                                            name="./thumbnailPath"
                                            rootPath="/content/dam/tetrapak/publicweb"/>
                                </items>
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        showhidetargetvalue="damVideo"/>
                            </damVideoSource>
                            <pwThemes
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    fieldDescription="Please select a background theme"
                                    path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwThemes"/>
                        </items>
                    </column>
                </items>
            </video>
            <anchor
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/include"
                    path="/apps/publicweb/components/content/anchorSelector/cq:dialog/content/items/anchor"/>
        </items>
    </content>
</jcr:root>
