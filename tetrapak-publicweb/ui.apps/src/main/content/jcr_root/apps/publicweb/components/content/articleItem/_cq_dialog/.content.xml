<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Article Item"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items
            jcr:primaryType="nt:unstructured"
            sling:hideChildren="[column]">
            <articleitem
                jcr:primaryType="nt:unstructured"
                jcr:title="Article Item"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <contentType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Select Content Type"
                                name="./contentType">
                                <items jcr:primaryType="nt:unstructured">
                                    <automatic
                                        jcr:primaryType="nt:unstructured"
                                        text="Automatic"
                                        value="automatic"/>
                                    <manual
                                        jcr:primaryType="nt:unstructured"
                                        text="Manual"
                                        value="manual"/>
                                </items>
                            </contentType>
                            
                            <automaticcontent
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <articlepath
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldDescription="Select article path to automatically populate values when content type is automatic"
                                        fieldLabel="Article Path"
                                        name="./articlePath"
                                        rootPath="/content"/>
                                </items>
                            </automaticcontent>
                
                            <manualcontent
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Article Title"
                                        name="./articleTitle"/>
                                    <vanityDescription
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Vanity Description i18n key"
                                        name="./vanityDescriptionI18n"/>
                                    <ctaText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Call to action Text i18n Key"
                                        name="./ctaTexti18nKey"/>
                                    <openInNewWindow
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        name="./openInNewWindow"
                                        text="Open In New Window?"
                                        value="true"/>
                                    <openInNewWindowDelete
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                        name="./openInNewWindow@Delete"
                                        value="{Boolean}true"/>
                                </items>
                            </manualcontent>
                            
                            <imagecontent
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <showImage
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        name="./showImage"
                                        text="Show Image?"
                                        value="true"/>
                                    <showImageDelete
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                        name="./showImage@Delete"
                                        value="{Boolean}true"/>
                                    <imagepath
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldDescription="Select Article Image Path"
                                        fieldLabel="Article Image Path"
                                        name="./articleImagePath"
                                        rootPath="/content/dam/publicweb"/>
                                    <imagealt
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter Alt Text i18 Key"
                                        fieldLabel="Alt Text i18 Key"
                                        name="./articleImageAltI18n"/>
                                </items>
                            </manualcontent>
                        </items>
                    </column>
                </items>
            </articleitem>
        </items>
    </content>
</jcr:root>