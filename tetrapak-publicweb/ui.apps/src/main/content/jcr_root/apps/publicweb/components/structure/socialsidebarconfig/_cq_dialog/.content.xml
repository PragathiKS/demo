<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Text &amp; Image"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
                <socialLinks
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Social Links"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                    <items jcr:primaryType="nt:unstructured">
                        <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                            <items jcr:primaryType="nt:unstructured">
                                 <socialmedia
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Social media icon"
                                    fieldLabel="Social Media Icon"
                                    name="./socialMedia"
                                    required="true"
                                    value="WeChat">
                                </socialmedia>
                                <socialMediaLink
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Add social media channel link"
                                    fieldLabel="Social media link path"
                                    name="./socialMediaLink"
                                    required="true"/>
                            </items>
                        </column>
                    </items>
                </socialLinks>
                <weChat
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Wechat QR code"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <wechatCode
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <qrCodeTitle
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Title"
                                    name="./qrCodeTitle"
                                    required="true"/>
                            <wechatQrCode
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                    class="cq-droptarget"
                                    fieldLabel="We chat QR code"
                                    fileNameParameter="./wechatQrCode"
                                    fileReferenceParameter="./wechatQrCodeReference"
                                    mimeTypes="[image/gif,image/jpeg,image/png]"
                                    name="./wechatQRcode"
                                    title="Upload Image Asset"
                                    uploadUrl="${suffix.path}"
                                    useHTML5="{Boolean}true"
                                    allowUpload="{Boolean}false" />
                            <qrAltText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Required for Accessibility use"
                                    fieldLabel="Alt Text"
                                    name="./qrAltText"/>
                            </items>
                        </wechatCode>
                    </items>
                </weChat>
        </items>
    </content>
</jcr:root>
