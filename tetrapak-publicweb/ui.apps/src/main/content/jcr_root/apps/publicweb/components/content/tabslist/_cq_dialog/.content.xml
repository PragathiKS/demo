<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Tab List"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <tab
                jcr:primaryType="nt:unstructured"
                jcr:title="Text &amp; Video"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Heading"
                                name="./heading"/>
                            <contentType
                                granite:class="cq-dialog-dropdown-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Select settings"
                                name="./contentType">
                                <items jcr:primaryType="nt:unstructured">
                                    <automatic
                                        jcr:primaryType="nt:unstructured"
                                        text="Automatic"
                                        value="automatic"/>
                                    <semi-automatic
                                        jcr:primaryType="nt:unstructured"
                                        text="Semi Automatic"
                                        value="semi-automatic"/>
                                    <manual
                                        jcr:primaryType="nt:unstructured"
                                        text="Manual"
                                        value="manual"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-dropdown-showhide-target=".contentType-showhide-target"/>
                            </contentType>
                            <tablistcontainer
                                granite:class="hide contentType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <container
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <list
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="tabsManual"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                description="Click to add tab content manually"
                                                fieldLabel="Configure Tab content"
                                                validation="multifield-max-9">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./tabsManual">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <tabLayout
                                                                    granite:class="cq-dialog-dropdown-showhide"
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                    fieldLabel="Select Tab Layout"
                                                                    name="./tabType">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <image
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Text &amp; Image"
                                                                            value="imageText"/>
                                                                        <video
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Text &amp; Video"
                                                                            value="videoText"/>
                                                                    </items>
                                                                    <granite:data
                                                                        jcr:primaryType="nt:unstructured"
                                                                        cq-dialog-dropdown-showhide-target=".tabLayout-showhide-target"/>
                                                                </tabLayout>
                                                                <subtitle
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Suggested to use characters less than recommended Limit: 35 chars considering translations"
                                                                    fieldLabel="Subtitle"
                                                                    maxlength="{Long}35"
                                                                    name="./subTitle"/>
                                                                <title
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Suggested to use characters less than recommended Limit: 40 chars considering translations"
                                                                    fieldLabel="Title"
                                                                    maxlength="{Long}40"
                                                                    name="./title"/>
                                                                <description
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                                    fieldDescription="Suggested to use characters less than recommended Limit: 700 chars considering translations"
                                                                    fieldLabel="Description"
                                                                    maxlength="{Long}700"
                                                                    name="./description"/>
                                                                <imagecontainer
                                                                    granite:class="hide tabLayout-showhide-target"
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <file
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                            allowUpload="{Boolean}false"
                                                                            autoStart="{Boolean}false"
                                                                            class="cq-droptarget"
                                                                            fieldLabel="Image path"
                                                                            fileNameParameter="./fileName"
                                                                            fileReferenceParameter="./fileReference"
                                                                            mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff]"
                                                                            multiple="{Boolean}false"
                                                                            name="./file"
                                                                            title="Upload Image Asset"
                                                                            uploadUrl="${suffix.path}"
                                                                            useHTML5="{Boolean}true"/>
                                                                        <alt
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                            fieldLabel="Image alt text"
                                                                            name="./alt"/>
                                                                    </items>
                                                                    <granite:data
                                                                        jcr:primaryType="nt:unstructured"
                                                                        showhidetargetvalue="imageText"/>
                                                                </imagecontainer>
                                                                <videocontainer
                                                                    granite:class="hide tabLayout-showhide-target"
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <videoSource
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                                                            path="/apps/publicweb/components/content/video/cq:dialog/content/items/video/items/column/items/videoSource"/>
                                                                        <youtubeId
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                                                            path="/apps/publicweb/components/content/video/cq:dialog/content/items/video/items/column/items/youtubeId"/>
                                                                        <damVideoSource
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                                                            path="/apps/publicweb/components/content/video/cq:dialog/content/items/video/items/column/items/damVideoSource"/>
                                                                        <thumbnailalttext
                                                                            granite:class="hide videoType-showhide-target"
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                            <items jcr:primaryType="nt:unstructured">
                                                                                <alttext
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                    fieldLabel="Poster image alt text"
                                                                                    name="./thumbnailAltText"/>
                                                                            </items>
                                                                            <granite:data
                                                                                jcr:primaryType="nt:unstructured"
                                                                                showhidetargetvalue="damVideo"/>
                                                                        </thumbnailalttext>
                                                                    </items>
                                                                    <granite:data
                                                                        jcr:primaryType="nt:unstructured"
                                                                        showhidetargetvalue="videoText"/>
                                                                </videocontainer>
                                                                <linkText
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Link text"
                                                                    fieldLabel="Link label"
                                                                    name="./linkTexti18n"/>
                                                                <linkUrl
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                    fieldDescription="Link to destination path"
                                                                    fieldLabel="Link path"
                                                                    name="./linkURL"/>
                                                                <pwLinkThemes
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                                                    path="/apps/publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwLinkThemes"/>
                                                                <targetBlank
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                    fieldDescription="Select to open link in new window if external URL or Document"
                                                                    name="./targetBlank"
                                                                    text="Open in new window"
                                                                    uncheckedValue="_self"
                                                                    value="_blank"/>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </list>
                                            <pwButtonThemes
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                                path="/apps/publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwButtonThemes"/>
                                        </items>
                                    </container>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="manual"/>
                            </tablistcontainer>
                            <tabpathcontainer
                                granite:class="hide contentType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <tabpaths
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="tabsSemi"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Add page paths to automatically populate values (Maximum Limit: 9 tabs)"
                                        fieldLabel="Select pages"
                                        validation="multifield-max-9">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./tabsSemi">
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <pageUrl
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldDescription="Select internal pages to display metadata information from linked pages"
                                                            fieldLabel="Page URL"
                                                            name="./pageURL"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </tabpaths>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="semi-automatic"/>
                            </tabpathcontainer>
                            <tabautocontainer
                                granite:class="hide contentType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <tags
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/common/tagspicker"
                                        fieldDescription="Select at one or more tags to populate values"
                                        fieldLabel="Tags"
                                        name="./tags"
                                        rootPath="/content/cq:tags"/>
                                    <maxtabs
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                        fieldDescription="Enter the maximum number of tabs to be shown: min-1; max-9"
                                        fieldLabel="Maximum number of tabs to be shown"
                                        max="9"
                                        min="1"
                                        name="./maxTabs"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="automatic"/>
                            </tabautocontainer>
                            <readMoreText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Read more text"
                                name="./readMoreTextI18n"/>
                            <readMorePath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Link to destination path"
                                fieldLabel="Read more path"
                                name="./readMorePath"/>
                            <targetBlank
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Select to open link in new window if external URL or Document"
                                name="./readMoreTarget"
                                text="Open in new window"
                                uncheckedValue="_self"
                                value="_blank"/>
                        </items>
                    </column>
                </items>
            </tab>
            <anchor
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/include"
                path="/apps/publicweb/components/content/anchorSelector/cq:dialog/content/items/anchor"/>
            <design
                jcr:primaryType="nt:unstructured"
                jcr:title="Design"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <pwThemes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="/apps/publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwThemes"/>
                            <padding
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="/apps/publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/padding"/>
                            <display
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="/apps/publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/display"/>
                        </items>
                    </column>
                </items>
            </design>
        </items>
    </content>
</jcr:root>
