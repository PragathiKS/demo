<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Public Web Carousel With Filters"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items
            jcr:primaryType="nt:unstructured"
            sling:hideChildren="[column]">
            <properties
                jcr:primaryType="nt:unstructured"
                jcr:title="Properties"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter title"
                                fieldLabel="Title"
                                name="./titleI18n"/>
                            <titlealignment
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                defaultValue="left"
                                fieldDescription="Set the title alignment"
                                fieldLabel="Title Alignment"
                                name="./titleAlignment">
                                <items jcr:primaryType="nt:unstructured">
                                    <left
                                        jcr:primaryType="nt:unstructured"
                                        selected="true"
                                        text="Left"
                                        value="text-left"/>
                                    <center
                                        jcr:primaryType="nt:unstructured"
                                        text="Center"
                                        value="text-center"/>
                                    <right
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="text-right"/>
                                </items>
                            </titlealignment>
                            <producttype
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/common/tagspicker"
                                fieldDescription="Select Product Type"
                                fieldLabel="Product Type"
                                eaemMaxTags="1"
                                validation="eaem.max.tags"
                                rootPath="/content/cq:tags/tetra-pak"
                                name="./productType"/>
                            <category
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/common/tagspicker"
                                fieldDescription="Select category for practice line"
                                fieldLabel="Category"
                                rootPath="/content/cq:tags/tetra-pak"
                                name="./category"/>   
                            <rootpath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="Enter the path under which the practice line pages exist"
                                fieldLabel="Practice Line Pages Root Path"
                                name="./rootPath"
                                rootPath="/content"/>                         
                        </items>
                    </column>
                </items>
            </properties>
            <design
                jcr:primaryType="nt:unstructured"
                jcr:title="Design"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <pwThemes
                                jcr:primaryType="nt:unstructured"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwThemes"
                                sling:resourceType="granite/ui/components/foundation/include">
                            </pwThemes>
                            <pwButtonThemes
                                jcr:primaryType="nt:unstructured"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwButtonThemes"
                                sling:resourceType="granite/ui/components/foundation/include">
                            </pwButtonThemes>
                            <padding
                                jcr:primaryType="nt:unstructured"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/padding"
                                sling:resourceType="granite/ui/components/foundation/include">
                            </padding>
                        </items>
                    </column>
                </items>
            </design>
        </items>
    </content>
</jcr:root>