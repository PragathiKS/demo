<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm,cq.siteadmin.admin.properties]"
    mode="edit">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container"
        class="cq-dialog-content-page">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container"
                rel="cq-siteadmin-admin-properties-tabs">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                    type="nav"/>
                <items jcr:primaryType="nt:unstructured">
                    <product
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Product Configuration"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <productProperties
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Product Properties"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <title
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Product Title"
                                                    name="./title"/>
                                            <vanityDescription
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldLabel="Vanity Description"
                                                    name="./vanityDescription"/>
                                            <ctaTexti18nKey
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Link Text"
                                                    name="./ctaTexti18nKey"/>
                                            <imagecontent
				                                jcr:primaryType="nt:unstructured"
				                                sling:resourceType="granite/ui/components/foundation/container">
				                                <items jcr:primaryType="nt:unstructured">
				                                    <imagepath
				                                        jcr:primaryType="nt:unstructured"
				                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
				                                        fieldDescription="Select Article Image Path"
				                                        fieldLabel="Product Image Path"
				                                        name="./productImagePath"
				                                        rootPath="/content/dam/publicweb"/>
				                                    <imagealt
				                                        jcr:primaryType="nt:unstructured"
				                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
				                                        fieldDescription="Enter Alt Text"
				                                        fieldLabel="Alt Text"
				                                        name="./productImageAltI18n"/>
				                                </items>
				                            </imagecontent>
                                        </items>
                                    </productProperties>
                                </items>
                            </column>
                        </items>
                    </product>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>

