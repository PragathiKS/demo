<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Base Page"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[cq.common.wcm,cq.siteadmin.admin.properties]"
          mode="edit">
    <content
            granite:class="cq-dialog-content-page"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    granite:rel="cq-siteadmin-admin-properties-tabs"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <pwBaseConfig
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Public Web Base Configuration"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <baseProperties
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Public Web Base Properties"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <hideContactFooterForm
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    cq:showOnCreate="{Boolean}true"
                                                    name="./hideContactFooterForm"
                                                    text="Hide Contact Footer Form?"
                                                    value="true"/>
                                            <hideContactFooterFormDelete
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    cq:showOnCreate="{Boolean}true"
                                                    name="./hideContactFooterForm@Delete"
                                                    value="{Boolean}true"/>
                                            <hideInSearch
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    cq:showOnCreate="{Boolean}true"
                                                    name="./hideInSearch"
                                                    text="Hide in search?"
                                                    value="true"/>
                                            <hideInSearchDelete
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    cq:showOnCreate="{Boolean}true"
                                                    name="./hideInSearch@Delete"
                                                    value="{Boolean}true"/>
                                            <errorpages
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    cq:showOnCreate="{Boolean}true"
                                                    fieldDescription="Error pages for this content tree"
                                                    fieldLabel="Error Pages"
                                                    name="./errorPages"
                                                    rootPath="/content"/>
                                        </items>
                                    </baseProperties>
                                    <aggregator
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Aggregator Configurations"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <imagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    cq:showOnCreate="{Boolean}true"
                                                    fieldDescription="Select Image Path - please select an image with aspect ratio 4x3"
                                                    fieldLabel="Image Path"
                                                    name="./imagePath"
                                                    rootPath="/content/dam/publicweb"/>
                                            <imageAltText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    cq:showOnCreate="{Boolean}true"
                                                    fieldDescription="Enter Alt Text"
                                                    fieldLabel="Image Alt Text"
                                                    name="./altText"/>
                                            <linkText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    cq:showOnCreate="{Boolean}true"
                                                    fieldDescription="Enter CTA Text"
                                                    fieldLabel="Link Text"
                                                    name="./linkText"/>
                                            <linkPath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    cq:showOnCreate="{Boolean}true"
                                                    fieldDescription="Enter CTA Path in case path is not provided then the path to thi page will be used"
                                                    fieldLabel="Link Path"
                                                    name="./linkText"/>
                                            <openInNewWindow
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    name="./linkTarget"
                                                    fieldDescription="Check this to open the link in a new window"
                                                    text="Open In New Window? (for External URLs and PDFs)"
                                                    value="true"/>
                                        </items>
                                    </aggregator>
                                </items>
                            </column>
                        </items>
                    </pwBaseConfig>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
