<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Public Web Footer"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <general
                    jcr:primaryType="nt:unstructured"
                    jcr:title="General"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <footerNavigationLinks
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    fieldDescription="Click 'Add field' to add a new User Submenu title and links"
                                    fieldLabel="Navigation Links">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                        acs-commons-nested=""
                                        name="./footerNavigationLinks">
                                        <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <linktext
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter Link Text"
                                                        fieldLabel="Link Text"
                                                        name="./linkTextI18n"/>
                                                    <linktooltip
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter Link Tool Tip"
                                                        fieldLabel="Link Tool Tip"
                                                        name="./linkTooltipI18n"/>
                                                    <linkpath
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Select Link"
                                                        fieldLabel="Link Path"
                                                        name="./linkPath"
                                                        rootPath="/content"/>
                                                    <targetBlank
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Open link in a new window ?"
                                                        text="New Window"
                                                        name="./targetBlank"/>
                                                </items>
                                            </column>
                                        </items>
                                </field>
                            </footerNavigationLinks>
                            <ctaLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Enter Navigate To Top anchor label"
                                    fieldLabel="To Top Anchor Label"
                                    name="./ctaLabelI18n"/>
                        </items>
                    </column>
                </items>
            </general>
            <sociallinks
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Social Links"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <footersociallinks
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    fieldDescription="Click 'Add field' to add a new Social channel and link"
                                    fieldLabel="Social Links">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                        acs-commons-nested=""
                                        name="./footerSocialLinks">
                                        <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <socialmedia
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Select the social media platform"
                                                        fieldLabel="Social Media Platform"
                                                        name="./socialMedia">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <linkedin
                                                                jcr:primaryType="nt:unstructured"
                                                                text="LinkedIn"
                                                                value="Linkedin"/>
                                                            <facebook
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Facebook"
                                                                value="Facebook"/>
                                                            <twitter
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Twitter"
                                                                value="Twitter"/>
                                                            <youtube
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Youtube"
                                                                value="Youtube"/>
                                                        </items>
                                                    </socialmedia>
                                                    <sociallinkpath
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter path for the social media page"
                                                        fieldLabel="Social Media Link Path"
                                                        name="./socialMediaLinkPath"/>
                                                </items>
                                            </column>
                                        </items>
                                </field>
                            </footersociallinks>
                        </items>
                    </column>
                </items>
            </sociallinks>
        </items>
    </content>
</jcr:root>
