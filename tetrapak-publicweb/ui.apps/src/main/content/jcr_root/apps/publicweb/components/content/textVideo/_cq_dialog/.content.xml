<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Text Video"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <textVideo
                jcr:primaryType="nt:unstructured"
                jcr:title="Text &amp; Video"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <subtitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Suggested to use characters less than recommended Limit: 35 chars considering translations"
                                fieldLabel="Subtitle"
                                name="./subTitle"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Suggested to use characters less than recommended Limit: 40 chars considering translations"
                                fieldLabel="Title"
                                name="./title"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldDescription="Suggested to use characters less than recommended Limit: 700 chars considering translations"
                                fieldLabel="Description"
                                name="./description"/>
                            <linkText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Link text"
                                fieldLabel="Link label"
                                name="./linkTexti18n"/>
                            <linkUrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldDescription="Link to destination path"
                                fieldLabel="Link path"
								rootPath="/content"
                                name="./linkURL"/>
                            <videoSource
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="/apps/publicweb/components/content/video/cq:dialog/content/items/video/items/column/items/videoSource"/>
                            <youtubeId
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="/apps/publicweb/components/content/video/cq:dialog/content/items/video/items/column/items/youtubeId"/>
                            <damVideoSource
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="/apps/publicweb/components/content/video/cq:dialog/content/items/video/items/column/items/damVideoSource"/>  
                        </items>
                    </column>
                </items>
            </textVideo>
            <anchor
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/include"
                path="/apps/publicweb/components/content/anchorSelector/cq:dialog/content/items/anchor"/>
            <design
                jcr:primaryType="nt:unstructured"
                jcr:title="Design"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <pwThemes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwThemes"/>
                            <pwButtonThemes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwButtonThemes"/>
                            <pwDisplay
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/display"/>
                        </items>
                    </column>
                </items>
            </design>
            <selectForms
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Select form"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <formType
                                    granite:class="cq-dialog-dropdown-showhide"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Select Form"
                                    name="./formType">
                                <items jcr:primaryType="nt:unstructured">
                                    <default
                                            jcr:primaryType="nt:unstructured"
                                            text="Default"
                                            value=""/>
                                    <enableSoftconversion
                                            jcr:primaryType="nt:unstructured"
                                            text="Enable Soft Conversion"
                                            value="enableSoftconversion"/>
                                    <enableSubscription
                                            jcr:primaryType="nt:unstructured"
                                            text="Enable Subscription"
                                            value="enableSubscription"/>
                                </items>
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        cq-dialog-dropdown-showhide-target=".formType-showhide-target"/>
                            </formType>
                            <softConversion granite:class="hide formType-showhide-target"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data jcr:primaryType="nt:unstructured"
                                              showhidetargetvalue="enableSoftconversion"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <form
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                            path="/apps/publicweb/components/content/softconversion/cq:dialog/content/items/form/items/column"/>
                                </items>
                            </softConversion>
                            <subscriptionForm granite:class="hide formType-showhide-target"
                                              jcr:primaryType="nt:unstructured"
                                              sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data jcr:primaryType="nt:unstructured"
                                              showhidetargetvalue="enableSubscription"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <form
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                            path="/apps/publicweb/components/content/subscriptionform/cq:dialog/content/items/form/items/column"/>
                                </items>
                            </subscriptionForm>
                        </items>
                    </column>
                </items>
            </selectForms>
        </items>
    </content>
</jcr:root>
