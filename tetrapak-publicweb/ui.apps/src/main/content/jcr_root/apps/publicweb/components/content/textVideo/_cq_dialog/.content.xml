<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Text Video"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items
            jcr:primaryType="nt:unstructured"
            sling:hideChildren="[column]">
            <textVideo
                jcr:primaryType="nt:unstructured"
                jcr:title="Text Video"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Title"
                                name="./title"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldLabel="Description"
                                name="./description"/>
                            <linkText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Link Text"
                                name="./linkTexti18n"/>
                            <linkUrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="Link URL"
                                rootPath="/content/tetrapak/public-web"
                                name="./linkURL"/>
                            <videoSource
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Select Video Source"
                                name="./videoSource">
                                <items jcr:primaryType="nt:unstructured">
                                    <youtube
                                        jcr:primaryType="nt:unstructured"
                                        text="Youtube"
                                        value="youtube"/>
                                    <damVideo
                                        jcr:primaryType="nt:unstructured"
                                        text="DAM Video"
                                        value="damVideo"/>
                                </items>
                            </videoSource>
                            <youtubeVideoID
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Youtube Video ID"
                                name="./youtubeVideoID"/>
                            <damVideoPath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="DAM Video Path"
                                name="./damVideoPath"
                                rootPath="/content/dam/publicweb"/>
                            <image
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Select a thumbnail for the DAM video"
                                fieldLabel="Thumbnail"
                                name="./thumbnailPath"
                                rootPath="/content/dam/publicweb"/>
                        </items>
                    </column>
                </items>
            </textVideo>
            <design
                jcr:primaryType="nt:unstructured"
                jcr:title="Design"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <pwThemes
                                jcr:primaryType="nt:unstructured"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwThemes"
                                sling:resourceType="granite/ui/components/foundation/include">
                            </pwThemes>
                            <pwButtonThemes
                                jcr:primaryType="nt:unstructured"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwButtonThemes"
                                sling:resourceType="granite/ui/components/foundation/include">
                            </pwButtonThemes>
                            <padding
                                jcr:primaryType="nt:unstructured"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/padding"
                                sling:resourceType="granite/ui/components/foundation/include">
                            </padding>
                            <display
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                defaultValue="display-row"
                                fieldLabel="Layout Display"
                                name="./pwDisplay">
                                <items jcr:primaryType="nt:unstructured">
                                    <rowLeftToRight
                                        jcr:primaryType="nt:unstructured"
                                        selected="true"
                                        text="Row - Left to right"
                                        value="display-row"/>
                                    <rowRightToLeft
                                        jcr:primaryType="nt:unstructured"
                                        text="Row - Right to Left"
                                        value="display-row-reversed"/>
                                    <columnTopToBottom
                                        jcr:primaryType="nt:unstructured"
                                        text="Column - Top to bottom"
                                        value="display-column"/>
                                    <columnBottomToTop
                                        jcr:primaryType="nt:unstructured"
                                        text="Column - Bottom to top"
                                        value="display-column-reversed"/>
                                </items>
                            </display>
                        </items>
                    </column>
                </items>
            </design>
        </items>
    </content>
</jcr:root>