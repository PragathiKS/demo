pipeline {
    agent {
                node {
                label 'cfe-deploy'
        }
}
    
    parameters {
        choice choices: ['DEV', 'QA', 'STAGE', 'SUP', 'DEV65'], description: '', name: 'ENVIRONMENT'
	}

    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        disableConcurrentBuilds()
    }

    stages {
        stage('Set HTTP Cache environment') {

            steps {
                script {                    
                    if (params.ENVIRONMENT == "QA") {

                    withCredentials([sshUserPrivateKey(credentialsId: 'cacheFlushDev', keyFileVariable: 'SSHKEY', passphraseVariable: '', usernameVariable: 'SSHUSER')])
                    {
                    sh 'ssh -o "StrictHostKeyChecking=no" -i ${SSHKEY} 20.56.55.30 -l tetrapak -tt "sh -x /usr/local/bin/cache_clear.sh"'
                }
                    }
                    
                }

                script {
                    if (params.ENVIRONMENT == "DEV") {

                    withCredentials([sshUserPrivateKey(credentialsId: 'cacheFlushDev', keyFileVariable: 'SSHKEY', passphraseVariable: '', usernameVariable: 'SSHUSER')])
                    {
                    sh 'ssh -o "StrictHostKeyChecking=no" -i ${SSHKEY} 52.149.68.17 -l tetrapak -tt "sh -x /usr/local/bin/cache_clear.sh"'
                }
                    }
                }
                
                script {
                    if (params.ENVIRONMENT == "STAGE") {

                    withCredentials([sshUserPrivateKey(credentialsId: 'cacheFlushDev', keyFileVariable: 'SSHKEY', passphraseVariable: '', usernameVariable: 'SSHUSER')])
                    {
                    sh 'ssh -o "StrictHostKeyChecking=no" -i ${SSHKEY} 20.61.16.52 -l tetrapak -tt "sh -x /usr/local/bin/cache_clear.sh"'
                    sh 'ssh -o "StrictHostKeyChecking=no" -i ${SSHKEY} 51.124.109.124 -l tetrapak -tt "sh -x /usr/local/bin/cache_clear.sh"'
                }
                    }
                }
                script {
                    if (params.ENVIRONMENT == "SUP") {

                    withCredentials([sshUserPrivateKey(credentialsId: 'cacheFlushDev', keyFileVariable: 'SSHKEY', passphraseVariable: '', usernameVariable: 'SSHUSER')])
                    {
                    sh 'ssh -o "StrictHostKeyChecking=no" -i ${SSHKEY} 20.50.198.70 -l tetrapak -tt "sh -x /usr/local/bin/cache_clear.sh"'
                }
                    }
                }
                script {
                    if (params.ENVIRONMENT == "DEV65") {

                    withCredentials([sshUserPrivateKey(credentialsId: 'cacheFlushDev', keyFileVariable: 'SSHKEY', passphraseVariable: '', usernameVariable: 'SSHUSER')])
                    {
                    sh 'ssh -o "StrictHostKeyChecking=no" -i ${SSHKEY} 40.113.160.27 -l tetrapak -tt "sh -x /usr/local/bin/cache_clear.sh"'
                }
                    }
                }				
            }
        }
        }
        }