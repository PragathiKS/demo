pipeline {
    agent {
        node {
        label 'cfe-deploy'
        }
    }

    stages {
        stage('Pally Test') {
            steps {
                script {
                    pallytest()        
                }
            }
        }
    }
}

def pallytest() {
            echo "Starting pa11y test"
            reportname = "Adhoc_Pa11y Report"
            sh 'chmod 777 Devops/PallyReportAdhoc.sh'
            sh 'sh -x Devops/PallyReportAdhoc.sh'
            sh 'mkdir -p pally-Adhoc'
            sh 'mv PallyReportAdhoc.html pally-Adhoc/PallyReportAdhoc.html' 
            publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: true, reportDir: 'pally-Adhoc', reportFiles: 'PallyReportAdhoc.html', reportName: 'PallyReport-Adhoc', reportTitles: ''])
}