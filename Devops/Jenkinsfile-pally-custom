pipeline {
    agent {
        node {
        label 'cfe-deploy'
        }
    }

    stages {
        stage('Pally Test') {
            steps {
                script {
                    pallytest()        
                }
            }
        }
    }
}

def pallytest() {
            echo "Starting pa11y test"
            reportname = "Custom_Pa11y Report"
            sh 'chmod 777 Devops/PallyReportCustom.sh'
            sh 'sh -x Devops/PallyReportCustom.sh'
            sh 'mkdir -p pally-custom'
            sh 'mv PallyReportCustom.html pally-custom/PallyReportCustom.html' 
            publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: true, reportDir: 'pally-custom', reportFiles: 'PallyReportCustom.html', reportName: 'PallyReport-Adhoc', reportTitles: ''])
}