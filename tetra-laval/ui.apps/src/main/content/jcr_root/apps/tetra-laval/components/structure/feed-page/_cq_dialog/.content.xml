<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Feed Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    mode="edit">
    <content
        granite:class="cq-dialog-content-page"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <pwBaseConfig
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Base Configuration"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <feedType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        required="{Boolean}true"
                                        fieldLabel="Select feed type"
                                        name="./feedType">
                                        <items jcr:primaryType="nt:unstructured">
                                            <caseArticle
                                                jcr:primaryType="nt:unstructured"
                                                text="Case Article"
                                                value="caseArticle"/>
                                            <event
                                                jcr:primaryType="nt:unstructured"
                                                text="Event"
                                                value="event"/>
                                            <news
                                                jcr:primaryType="nt:unstructured"
                                                text="News"
                                                value="news"/>
                                            <pressRelease
                                                jcr:primaryType="nt:unstructured"
                                                text="Press Release"
                                                value="pressRelease"/>
                                        </items>
                                    </feedType>
                                </items>
                            </column>
                        </items>
                    </pwBaseConfig>
                    <aggregator
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Aggregator Configuration"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <aggregator
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Aggregator Configurations"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <imagePath
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                fieldDescription="Original Image should be in 16:9 aspect ratio"
                                                fieldLabel="Thumbnail Image path"
                                                name="./imagePath"
                                                rootPath="/content/dam/tetra-laval">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-msm-lockable="imagePath"/>
                                            </imagePath>
                                        </items>
                                    </aggregator>
                                </items>
                            </column>
                        </items>
                    </aggregator>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
