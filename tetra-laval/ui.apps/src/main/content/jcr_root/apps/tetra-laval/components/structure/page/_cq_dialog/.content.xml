<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    mode="edit">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <basic/>
                    <aggregator
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Tetra Laval Aggregator Configuration *"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <aggregator
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Aggregator Configurations"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <info
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/field"
                                                fieldLabel="*Please use title, tags &amp; description from basic tab"/>
                                            <imagePath
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                fieldDescription="Original Image should be in 16:9 aspect ratio"
                                                fieldLabel="Thumbnail Image path"
                                                name="./imagePath"
                                                required="{Boolean}true"
                                                rootPath="/content/dam/tetrapak">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-msm-lockable="imagePath"/>
                                            </imagePath>
                                            <imageAltText
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Required for Accessibility use"
                                                fieldLabel="Thumbnail Image Alt Text"
                                                name="./altText"
                                                required="{Boolean}true">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-msm-lockable="altText"/>
                                            </imageAltText>
                                            <linkText
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Text available for the visitor"
                                                fieldLabel="Link Text"
                                                name="./linkText">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-msm-lockable="linkText"/>
                                            </linkText>
                                            <linkPath
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                fieldDescription="Link to destination URL"
                                                fieldLabel="Link Path"
                                                name="./linkPath"
                                                rootPath="/content">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-msm-lockable="linkPath"/>
                                            </linkPath>
                                            <linkType
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Link Type"
                                                name="./pwButtonTheme">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <linkButton
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Link Text"
                                                        value="link"/>
                                                    <button
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Button"
                                                        value="secondary"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-msm-lockable="pwButtonTheme"/>
                                            </linkType>
                                        </items>
                                    </aggregator>
                                </items>
                            </column>
                        </items>
                    </aggregator>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
