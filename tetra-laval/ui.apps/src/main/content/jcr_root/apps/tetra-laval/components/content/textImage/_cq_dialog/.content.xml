<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Text &amp; Image"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <textImage
                jcr:primaryType="nt:unstructured"
                jcr:title="Text &amp; Image"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <subtitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Suggested to use characters less than recommended Limit: 35 chars considering translations"
                                fieldLabel="Subtitle"
                                name="./subTitle"/>
							<headingtag
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="HeadingTag"								
								fieldDescription="Select tag for title(SEO recomended),H3 is default"
                                name="./headingTag">
                                <items jcr:primaryType="nt:unstructured">
									<h3
                                        jcr:primaryType="nt:unstructured"
                                        text="H3"
                                        value="h3"/>
                                    <h1
                                        jcr:primaryType="nt:unstructured"
                                        text="H1"
                                        value="h1"/>
                                    <h2
                                        jcr:primaryType="nt:unstructured"
                                        text="H2"
                                        value="h2"/>
                                </items>
                            </headingtag>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Suggested to use characters less than recommended Limit: 40 chars considering translations"
                                fieldLabel="Title"
                                name="./title"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldDescription="Suggested to use characters less than recommended Limit: 700 chars considering translations"
                                fieldLabel="Description"
                                name="./description"/>
                            <image
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Image"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./imagePath"
                                mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff]"
                                multiple="{Boolean}false"
                                name="./file"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <imageAlt
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Image alt text"
                                name="./imageAltText"/>
                            <linkText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Link text"
                                fieldLabel=" Link label"
                                name="./linkText"/>
                            <linkUrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Link to destination path. Do not configure CTA in case subscription form needs to be enabled."
                                fieldLabel="Link path"
                                name="./linkURL"
                                rootPath="/content"/>
                        </items>
                    </column>
                </items>
            </textImage>
<!--            <anchor-->
<!--                jcr:primaryType="nt:unstructured"-->
<!--                sling:resourceType="granite/ui/components/coral/foundation/include"-->
<!--                path="/apps/publicweb/components/content/anchorSelector/cq:dialog/content/items/anchor"/>-->
            <design
                jcr:primaryType="nt:unstructured"
                jcr:title="Design"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <pwThemes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwThemes"/>
                            <pwButtonThemes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/pwButtonThemes"/>
                            <pwDisplay
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="publicweb/components/content/themeSelector/cq:dialog/content/items/design/items/column/items/display"/>
                        </items>
                    </column>
                </items>
            </design>
            <selectForms
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Select form"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <formType
                                    granite:class="cq-dialog-dropdown-showhide"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Select Form"
                                    name="./formType">
                                <items jcr:primaryType="nt:unstructured">
                                    <default
                                            jcr:primaryType="nt:unstructured"
                                            text="Default"
                                            value=""/>
                                    <enableSoftconversion
                                            jcr:primaryType="nt:unstructured"
                                            text="Enable Soft Conversion"
                                            value="enableSoftconversion"/>
                                    <enableSubscription
                                            jcr:primaryType="nt:unstructured"
                                            text="Enable Subscription"
                                            value="enableSubscription"/>
                                </items>
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        cq-dialog-dropdown-showhide-target=".formType-showhide-target"/>
                            </formType>
                            <softConversion granite:class="hide formType-showhide-target"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data jcr:primaryType="nt:unstructured"
                                              showhidetargetvalue="enableSoftconversion"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <form
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                            path="/apps/publicweb/components/content/softconversion/cq:dialog/content/items/form/items/column"/>
                                </items>
                            </softConversion>
                            <subscriptionForm granite:class="hide formType-showhide-target"
                                              jcr:primaryType="nt:unstructured"
                                              sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data jcr:primaryType="nt:unstructured"
                                              showhidetargetvalue="enableSubscription"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <form
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/include"
                                            path="/apps/publicweb/components/content/subscriptionform/cq:dialog/content/items/form/items/column"/>
                                </items>
                            </subscriptionForm>
                        </items>
                    </column>
                </items>
            </selectForms>
        </items>
    </content>
</jcr:root>
