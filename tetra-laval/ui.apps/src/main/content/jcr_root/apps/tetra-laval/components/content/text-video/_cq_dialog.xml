<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Text Video"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <textVideo
                jcr:primaryType="nt:unstructured"
                jcr:title="Text &amp; Video"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <subtitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Suggested to use characters less than recommended Limit: 35 chars considering translations"
                                fieldLabel="Subtitle"
                                name="./subTitle"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Suggested to use characters less than recommended Limit: 40 chars considering translations"
                                fieldLabel="Title"
                                name="./title"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldDescription="Suggested to use characters less than recommended Limit: 700 chars considering translations"
                                fieldLabel="Description"
                                name="./description"/>
                            <linkText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Link text"
                                fieldLabel="Link label"
                                name="./linkTexti18n"/>
                            <linkUrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldDescription="Link to destination path. Do not configure CTA in case subscription form needs to be enabled."
                                fieldLabel="Link path"
                                rootPath="/content"
                                name="./linkURL"/>
                            <targetBlank
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./targetBlank"
                                text="Open in new window"
                                value="true"/>
                            <videoSource
                                granite:class="cq-dialog-dropdown-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Prefered video option is AEM DAM"
                                fieldLabel="Select Video Source"
                                name="./videoSource">
                                <items jcr:primaryType="nt:unstructured">
                                    <damVideo
                                        jcr:primaryType="nt:unstructured"
                                        text="DAM Video"
                                        value="damVideo"/>
                                    <youtube
                                        jcr:primaryType="nt:unstructured"
                                        text="Youtube"
                                        value="youtube"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-dropdown-showhide-target=".videoType-showhide-target"/>
                            </videoSource>
                            <youtubeId
                                granite:class="hide videoType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <youtubeVideoID
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter the youtube ID to be picked from URL e.g. fR-esiS1Pn0"
                                        fieldLabel="Youtube Video ID"
                                        name="./youtubeVideoID"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="youtube"/>
                            </youtubeId>
                            <damVideoSource
                                granite:class="hide videoType-showhide-target"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <damVideoPath
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        fieldLabel="DAM Video Path"
                                        name="./damVideoPath"
                                        rootPath="/content/dam/tetra-laval"/>
                                    <image
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                        allowUpload="{Boolean}false"
                                        autoStart="{Boolean}false"
                                        class="cq-droptarget"
                                        fieldLabel="Poster image"
                                        fileNameParameter="./fileName"
                                        fileReferenceParameter="./thumbnailPath"
                                        mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff]"
                                        multiple="{Boolean}false"
                                        name="./file"
                                        title="Upload Image Asset"
                                        uploadUrl="${suffix.path}"
                                        useHTML5="{Boolean}true"/>
                                    <thumbnailAltText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Thumbnail alt text"
                                        name="./thumbnailAltText"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="damVideo"/>
                            </damVideoSource>
                        </items>
                    </column>
                </items>
            </textVideo>
            <anchor
                jcr:primaryType="nt:unstructured"
                jcr:title="Anchor Link"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <anchorId
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter an anchor ID to handle anchor functionality e.g. : Processing"
                                fieldLabel="Anchor ID"
                                name="./anchorId"/>
                            <anchorTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Anchor Title"
                                name="./anchorTitle"/>
                        </items>
                    </column>
                </items>
            </anchor>
            <design
                jcr:primaryType="nt:unstructured"
                jcr:title="Design"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <pwThemes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Background Themes"
                                name="./pwTheme">
                                <items jcr:primaryType="nt:unstructured">
                                    <grayscaleWhite
                                        jcr:primaryType="nt:unstructured"
                                        selected="true"
                                        text="White"
                                        value="grayscale-white"/>
                                    <grayscaleLighter
                                        jcr:primaryType="nt:unstructured"
                                        text="Grey"
                                        value="grayscale-lighter"/>
                                </items>
                            </pwThemes>
                            <pwButtonThemes
                                cq:showOnCreate="{Boolean}true"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Link Type"
                                name="./pwButtonTheme">
                                <items jcr:primaryType="nt:unstructured">
                                    <linkButton
                                        jcr:primaryType="nt:unstructured"
                                        text="Link Text"
                                        value="link"/>
                                    <button
                                        jcr:primaryType="nt:unstructured"
                                        text="Button"
                                        value="secondary"/>
                                </items>
                            </pwButtonThemes>
                            <display
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Select to align text left or right"
                                fieldLabel="Card Alignment"
                                name="./pwDisplay">
                                <items jcr:primaryType="nt:unstructured">
                                    <rowLeftToRight
                                        jcr:primaryType="nt:unstructured"
                                        selected="true"
                                        text="Row - Left to right"
                                        value="display-row"/>
                                    <rowRightToLeft
                                        jcr:primaryType="nt:unstructured"
                                        text="Row - Right to Left"
                                        value="display-row-reversed"/>
                                </items>
                            </display>
                        </items>
                    </column>
                </items>
            </design>
        </items>
    </content>
</jcr:root>
