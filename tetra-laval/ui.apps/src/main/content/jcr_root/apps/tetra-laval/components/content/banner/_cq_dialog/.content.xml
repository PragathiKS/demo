<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Banner"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured" sling:hideChildren="[selectForms,display]">
            <design
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Design"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured" sling:hideChildren="[pwThemes,pwCardTheme,pwDisplay]">
                            <layout
                                    granite:class="cq-dialog-dropdown-showhide"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Layout type"
                                    name="./layout">
                                <items jcr:primaryType="nt:unstructured">
                                    <normal
                                            jcr:primaryType="nt:unstructured"
                                            text="Normal"
                                            value=""/>
                                    <reverse
                                            jcr:primaryType="nt:unstructured"
                                            text="Reverse"
                                            value="reverse"/>
                                </items>
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        cq-dialog-dropdown-showhide-target=".formType-showhide-target"/>
                            </layout>
                            <textColor
                                    granite:class="cq-dialog-dropdown-showhide"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Color of title and description"
                                    name="./textColor">
                                <items jcr:primaryType="nt:unstructured">
                                    <white
                                            jcr:primaryType="nt:unstructured"
                                            text="White"
                                            value=""/>
                                    <black
                                            jcr:primaryType="nt:unstructured"
                                            text="Black"
                                            value="pw-banner__content--text-black"/>
                                </items>
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        cq-dialog-dropdown-showhide-target=".formType-showhide-target"/>
                            </textColor>
                            <backgroudColor
                                    granite:class="cq-dialog-dropdown-showhide"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Color of background"
                                    name="./backgroundColor">
                                <items jcr:primaryType="nt:unstructured">
                                    <transparent
                                            jcr:primaryType="nt:unstructured"
                                            text="Transparent"
                                            value=""/>
                                    <white
                                            jcr:primaryType="nt:unstructured"
                                            text="White"
                                            value="pw-banner__content--background-white"/>
                                    <black
                                            jcr:primaryType="nt:unstructured"
                                            text="Black"
                                            value="pw-banner__content--background-black"/>
                                </items>
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        cq-dialog-dropdown-showhide-target=".formType-showhide-target"/>
                            </backgroudColor>
                        </items>
                    </column>
                </items>
            </design>
            <properties
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Banner"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured" sling:hideChildren="[headingtag,subtitle]"/>
                    </column>
                </items>
            </properties>
        </items>
    </content>
</jcr:root>
