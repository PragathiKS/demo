<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Design"
          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
    <items jcr:primaryType="nt:unstructured">
        <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <pwThemes
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldLabel="Background Themes"
                    name="./pwTheme">
                    <items jcr:primaryType="nt:unstructured">
                        <grayscaleWhite
                            jcr:primaryType="nt:unstructured"
                            selected="true"
                            text="White"
                            value="grayscale-white"/>
                        <grayscaleLighter
                            jcr:primaryType="nt:unstructured"
                            text="Grey"
                            value="grayscale-lighter"/>
                    </items>
                </pwThemes>
                <pwButtonThemes
                    cq:showOnCreate="{Boolean}true"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldLabel="Link Type"
                    name="./pwButtonTheme">
                    <items jcr:primaryType="nt:unstructured">
                        <linkButton
                            jcr:primaryType="nt:unstructured"
                            text="Link Text"
                            value="link"/>
                        <button
                            jcr:primaryType="nt:unstructured"
                            text="Button"
                            value="secondary"/>
                    </items>
                </pwButtonThemes>
                <display
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldDescription="Select to align text left or right"
                    fieldLabel="Card Alignment"
                    name="./pwDisplay">
                    <items jcr:primaryType="nt:unstructured">
                        <rowLeftToRight
                            jcr:primaryType="nt:unstructured"
                            selected="true"
                            text="Row - Left to right"
                            value="display-row"/>
                        <rowRightToLeft
                            jcr:primaryType="nt:unstructured"
                            text="Row - Right to Left"
                            value="display-row-reversed"/>
                    </items>
                </display>
            </items>
        </column>
    </items>
</jcr:root>
