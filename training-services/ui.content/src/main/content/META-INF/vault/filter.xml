<?xml version="1.0" encoding="UTF-8"?>
<workspaceFilter version="1.0">
    <filter
        root="/conf/global/settings/dam/adminui-extension/metadataschema/training-services" />
    <filter root="/conf/trs" mode="replace"/>
    <filter root="/conf/global/settings/workflow/models"
        mode="update" />
    <!-- <filter root="/conf/global/settings/workflow" mode="merge"/> -->
    <filter root="/var/workflow/models/trs-authors" mode="merge" />
    <filter root="/content/trs">
        <exclude pattern=".*" />
        <include pattern=".*/_jcr_content" />
        <include pattern=".*/training-videos" />
        <include pattern=".*/training-videos/_jcr_content" />
        <include pattern=".*/errors(/.*)?" />
        <include pattern=".*/tag-uploader(/.*)?" />
        <include pattern=".*/tag-conversion-utility(/.*)?" />
    </filter>
    <filter root="/content/dam/training-services">
        <exclude pattern=".*/system" />    
        <exclude pattern=".*/mapping" />
        <exclude pattern=".*/en" />
        <exclude pattern=".*/micro-learning-training" />   
        <exclude pattern=".*/test*" />     
    </filter>
</workspaceFilter>
