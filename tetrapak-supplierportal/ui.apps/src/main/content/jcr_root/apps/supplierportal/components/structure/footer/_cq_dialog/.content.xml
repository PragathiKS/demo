<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Footer"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <footer-links
                jcr:primaryType="nt:unstructured"
                jcr:title="Footer Links"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <tetrapakLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="My TetraPak Label"
                                name="./tetrapakLabel"/>
                            <tetrapakLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="My TetraPak image"
                                fieldLabel="My TetraPak path"
                                name="./tetrapakPath"/>
                            <cookiesLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Cookie Policy Label"
                                name="./cookiesLabel"/>
                            <cookiesLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldDescription="Cookies Policy Path"
                                fieldLabel="Cookies Policy Path"
                                name="./cookiesPath"
                                rootPath="/content"/>
                            <termsConditionLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Terms and Conditions Label"
                                name="./termsConditionLabel"/>
                            <termsConditionLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldDescription="Terms and Conditions Path"
                                fieldLabel="Terms and Conditions Path"
                                name="./termsConditionPath"
                                rootPath="/content"/>
                            <languageLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Language Label"
                                name="./languageLabel"/>
                            <languageLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldDescription="Language Label"
                                fieldLabel="Language Label"
                                name="./languagePath"
                                rootPath="/content"/>
                            <text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldLabel="Footer Text"
                                maxlength="{Long}300"
                                name="./footerText"/>
                        </items>
                    </column>
                </items>
            </footer-links>
        </items>
    </content>
</jcr:root>
