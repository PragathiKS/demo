{{#if isError}}
<h3 class="tp-payment-details__title" auto_locator="paymentDetailsHeading">
  {{#if isFetchError}}
  {{i18n key=i18nKeys.fetchError}}
  {{else}}
  {{i18n key=i18nKeys.emptyPaymentDetails}}
  {{/if}}
</h3>
{{else}}
<div class="row tp-payment-details__info-card-row">
    <div class="col-sm-12 col-12 tp-payment-details__info-card-col">
        {{#if_noteq paymentData.documentReferenceID ""}}
        <div class="tp-payment-details__info-line">
            <div class="tp-payment-details__info-cell-1" auto_locator="paymentDetailsDataKey">{{i18n key=i18nKeys.invoiceNo}}</div>
            <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsDataValue">{{paymentData.documentReferenceID}}</div>
        </div>
        {{/if_noteq}}
        {{#if_noteq paymentData.documentDate ""}}
        <div class="tp-payment-details__info-line">
            <div class="tp-payment-details__info-cell-1" auto_locator="paymentDetailsDataKey">{{i18n key=i18nKeys.date}}</div>
            <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsDataValue">{{paymentData.documentDate}}</div>
        </div>
        {{/if_noteq}}
        {{#if_noteq paymentData.invoiceStatusName ""}}
        <div class="tp-payment-details__info-line">
            <div class="tp-payment-details__info-cell-1" auto_locator="paymentDetailsDataKey">{{i18n key=i18nKeys.status}}</div>
            <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsDataValue">{{paymentData.invoiceStatusName}}</div>
        </div>
        {{/if_noteq}}
    </div>
</div>
<div class="row tp-payment-details__info-card-row">
<div class="col-lg-4 col-md-6 col-sm-6 col-12 tp-payment-details__info-card-col">
<div class="tp-payment-details__info-card js-payment-details__info-card">
            <h3 auto_locator="sectionTitle">{{i18n key=i18nKeys.companyInfo}}</h3>
            {{#if_noteq paymentData.companyName ""}}
            <div class="tp-payment-details__info-line">
                <div class="tp-payment-details__info-cell-1" auto_locator="paymentDetailsDataKey">{{i18n key=i18nKeys.company}}</div>
                <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsDataValue">{{paymentData.companyName}}</div>
            </div>
            {{/if_noteq}}
            {{#if_noteq paymentData.companyCode ""}}
            <div class="tp-payment-details__info-line">
                <div class="tp-payment-details__info-cell-1" auto_locator="paymentDetailsDataKey">{{i18n key=i18nKeys.code}}</div>
                <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsDataValue">{{paymentData.companyCode}}</div>
            </div>
            {{/if_noteq}}
            {{#if_noteq paymentData.companyCountry ""}}
            <div class="tp-payment-details__info-line">
                <div class="tp-payment-details__info-cell-1" auto_locator="paymentDetailsDataKey">{{i18n key=i18nKeys.country}}</div>
                <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsDataValue">{{paymentData.companyCountry}}</div>
            </div>
            {{/if_noteq}}
        </div>
</div>
<div class="col-lg-4 col-md-6 col-sm-6 col-12 tp-payment-details__info-card-col">
<div class="tp-payment-details__info-card js-payment-details__info-card">
            <h3 auto_locator="sectionTitle">{{i18n key=i18nKeys.supplierInfo}}</h3>
            {{#if_noteq paymentData.supplierName ""}}
            <div class="tp-payment-details__info-line">
                <div class="tp-payment-details__info-cell-1" auto_locator="paymentDetailsDataKey">{{i18n key=i18nKeys.supplier}}</div>
                <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsDataValue">{{paymentData.supplierName}}</div>
            </div>
            {{/if_noteq}}
            {{#if_noteq paymentData.supplier ""}}
            <div class="tp-payment-details__info-line">
                <div class="tp-payment-details__info-cell-1" auto_locator="paymentDetailsDataKey">{{i18n key=i18nKeys.code}}</div>
                <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsDataValue">{{paymentData.supplier}}</div>
            </div>
            {{/if_noteq}}
        </div>
</div>
</div>



<div class="col-lg-8 col-md-8 col-sm-8 col-12 tp-payment-details__details-row">
    <h4 class="tp-payment-details__details-row-title" auto_locator="subsectionTitle">{{i18n key=i18nKeys.details}}</h4>
    {{#if_noteq paymentData.amountInTransactionCurrency ""}}
    <div class="tp-payment-details__details-line">
        <div class="tp-payment-details__details-cell" auto_locator="subsectionTitle">{{i18n key=i18nKeys.totalAmount}}
            {{#if_noteq showToolTip.totalAmountTooltip ""}}
            <button data-html="true" type="button" class="dashed-border" data-toggle="tooltip" data-placement="bottom"
                title="<span class='tooltip-header'>{{i18n key=i18nKeys.totalAmount}}</span>
                <span>{{i18n key=i18nKeys.totalAmountTooltip}}</span>">
                <i class="icon icon-Info"></i>
            </button>
            {{/if_noteq}}
        </div>
        <div class="tp-payment-details__info-cell-2" auto_locator="subsectionTitle">{{paymentData.amountInTransactionCurrency}} {{paymentData.transactionCurrency}}</div>
    </div>
    {{/if_noteq}}
    {{!-- {{#if_noteq paymentData.tax ""}}
    <div class="tp-payment-details__details-line">
        <div class="tp-payment-details__details-cell" auto_locator="paymentDetailsSectionDataKey">{{i18n key=i18nKeys.tax}}
