                <i class="icon icon-Info"></i>
            </button>
            {{/if_noteq}}
        </div>
        <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsSectionDataValue">{{paymentData.withholdingTaxAmmount}} {{paymentData.transactionCurrency}}</div>
    </div>
    {{/if_noteq}}
    {{!-- {{#if_noteq paymentData.netPayable ""}}
    <div class="tp-payment-details__details-line">
        <div class="tp-payment-details__details-cell" auto_locator="paymentDetailsSectionDataKey">{{i18n key=i18nKeys.netPayable}}
