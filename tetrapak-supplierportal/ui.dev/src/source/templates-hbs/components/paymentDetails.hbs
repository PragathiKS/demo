                <span>{{i18n key=i18nKeys.netPayableTooltip}}</span>">
                <i class="icon icon-Info"></i>
            </button>
            {{/if_noteq}}
        </div>
        <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsSectionDataValue">{{paymentData.netPayable}}</div>
    </div>
    {{/if_noteq}} --}}
    {{#if_noteq paymentData.paymentTerms ""}}
    <div class="tp-payment-details__details-line">
        <div class="tp-payment-details__details-cell" auto_locator="paymentDetailsSectionDataKey">{{i18n key=i18nKeys.paymentTerm}}
           {{#if_noteq showToolTip.paymentTermTooltip ""}}
            <button data-html="true" type="button" class="dashed-border" data-toggle="tooltip" data-placement="bottom"
                title="<span class='tooltip-header'>{{i18n key=i18nKeys.paymentTerm}}</span>
                <span>{{i18n key=i18nKeys.paymentTermTooltip}}</span>">
                <i class="icon icon-Info"></i>
            </button>
            {{/if_noteq}}
        </div>
        <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsSectionDataValue">{{paymentData.paymentTerms}}</div>
    </div>
    {{/if_noteq}}
    {{#if_noteq paymentData.clearingDate ""}}
    <div class="tp-payment-details__details-line">
        <div class="tp-payment-details__details-cell" auto_locator="paymentDetailsSectionDataKey">{{i18n key=i18nKeys.paidDate}}
            {{#if_noteq showToolTip.paidDateTooltip ""}}
            <button data-html="true" type="button" class="dashed-border" data-toggle="tooltip" data-placement="bottom"
                title="<span class='tooltip-header'>{{i18n key=i18nKeys.paidDate}}</span>
                <span>{{i18n key=i18nKeys.paidDateTooltip}}</span>">
                <i class="icon icon-Info"></i>
            </button>
            {{/if_noteq}}
        </div>
        <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsSectionDataValue">{{paymentData.clearingDate}}</div>
    </div>
    {{else}}
    {{#if_noteq paymentData.dueCalculationBaseDate ""}}
    <div class="tp-payment-details__details-line">
        <div class="tp-payment-details__details-cell" auto_locator="paymentDetailsSectionDataKey">{{i18n key=i18nKeys.dueDate}}
            {{#if_noteq showToolTip.detailsDueDateTooltip ""}}
            <button data-html="true" type="button" class="dashed-border" data-toggle="tooltip" data-placement="bottom"
                title="<span class='tooltip-header'>{{i18n key=i18nKeys.dueDate}}</span>
                <span>{{i18n key=i18nKeys.detailsDueDateTooltip}}</span>">
                <i class="icon icon-Info"></i>
            </button>
            {{/if_noteq}}
        </div>
        <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsSectionDataValue">{{paymentData.dueCalculationBaseDate}}</div>
    </div>
    {{/if_noteq}}
    {{/if_noteq}}
    {{#if_noteq paymentData.bankAccount ""}}
    <div class="tp-payment-details__details-line">
        <div class="tp-payment-details__details-cell" auto_locator="paymentDetailsSectionDataKey">{{i18n key=i18nKeys.bankAccount}}
            {{#if_noteq showToolTip.bankAccountTooltip ""}}
            <button data-html="true" type="button" class="dashed-border" data-toggle="tooltip" data-placement="bottom"
                title="<span class='tooltip-header'>{{i18n key=i18nKeys.bankAccount}}</span>
                <span>{{i18n key=i18nKeys.bankAccountTooltip}}</span>">
                <i class="icon icon-Info"></i>
            </button>
            {{/if_noteq}}
        </div>
        <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsSectionDataValue">{{paymentData.bankAccount}}</div>
    </div>
    {{/if_noteq}}
    {{#if_noteq paymentData.paymentMethod ""}}
    <div class="tp-payment-details__details-line">
        <div class="tp-payment-details__details-cell" auto_locator="paymentDetailsSectionDataKey">{{i18n key=i18nKeys.paymentMethod}}
            {{#if_noteq showToolTip.paymentMethodTooltip ""}}
            <button data-html="true" type="button" class="dashed-border" data-toggle="tooltip" data-placement="bottom"
                title="<span class='tooltip-header'>{{i18n key=i18nKeys.paymentMethod}}</span>
                <span>{{i18n key=i18nKeys.paymentMethodTooltip}}</span>">
                <i class="icon icon-Info"></i>
            </button>
            {{/if_noteq}}
        </div>
        <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsSectionDataValue">{{paymentData.paymentMethod}}</div>
    </div>
    {{/if_noteq}}
    {{#if_noteq paymentData.purchasingDocuments ""}}
    {{#if paymentData.purchasingDocuments.length}}
    <div class="tp-payment-details__details-line">
        <div class="tp-payment-details__details-cell" auto_locator="paymentDetailsSectionDataKey">{{i18n key=i18nKeys.poNo}}
            {{#if_noteq showToolTip.detailsPoNoTooltip ""}}
            <button data-html="true" type="button" class="dashed-border" data-toggle="tooltip" data-placement="bottom"
                title="<span class='tooltip-header'>{{i18n key=i18nKeys.poNo}}</span>
                <span>{{i18n key=i18nKeys.detailsPoNoTooltip}}</span>">
                <i class="icon icon-Info"></i>
            </button>
            {{/if_noteq}}
        </div>
        <div class="tp-payment-details__info-cell-2" auto_locator="paymentDetailsSectionDataValue">
        {{#each paymentData.purchasingDocuments}}
        <span class="tp-payment-details__details-cell-multiple-col" auto_locator="paymentDetailsSectionDataValue">{{this}}{{#unless @last}},{{/unless}}</span>
        {{/each}}
        </div>
    </div>
    {{/if}}
    {{/if_noteq}}
</div>
{{/if}}


