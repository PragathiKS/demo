<div class="tpatom-dropdown {{#if wrapClasses}} {{wrapClasses}}{{/if}}">
 {{#if labelText}}<label class="tpatom-dropdown__text" for="{{name}}">{{i18n key=labelText}}</label>{{/if}}
    <div class="d-block position-relative">
        <select name="{{name}}" id="{{name}}" class="tpatom-dropdown__select-box {{#if eleClasses}} {{eleClasses}}{{/if}}{{#if shapeName}} {{shapeName}}{{/if}}"{{#if dataLocator}} data-locator="{{dataLocator}}"{{/if}}{{#if label}} aria-label="{{i18n key=label}}"{{/if}} {{#if required}} required {{/if}} {{#if disabled}} disabled {{/if}}{{#if shapeName}} data-shapeName="{{shapeName}}"{{/if}}>
            {{#if defaultValue}}
                <option value="">{{i18n key=defaultValue}}</option>
            {{/if}}
            {{#each options}}
                <option 
                {{#if this.selected}}
                    selected="selected"
                {{/if}}
                value="{{this.key}}">{{#each this.desc}}{{#unless @first}}, {{/unless}}{{this}}{{else}}{{this.desc}}{{/each}}</option>
            {{/each}}
        </select>
        <i class="tpatom-dropdown__icon icon-Arrow_Down"></i>
    </div>
</div>
